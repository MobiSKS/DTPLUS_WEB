@model HPCL.Common.Models.ResponseModel.Customer.GetCustomerCardWiseBalanceResponse
@using HPCL.Common.Resources

@if (Model.Data.Count() > 0)
{
    <div class="col-lg-12 col-md-12 col-12 pl-0 pr-0">
            @*<p class="font-12 font-weight-bold d-inline-block w-auto ml-3 mb-0 px-2">Card Allocation and Activation Details</p>*@
            <div class="d-flex align-items-center flex-wrap mb-3">
                <div class="table-responsive">
                    <table id="cardAllocandActivationDetails" class="datatable table table-striped table-bordered d-md-table d-block text-nowrap display table-responsive" style="width:100%;">
                        <thead>
                            <tr>
                                <th>S NO.</th>
                                <th>Card Number</th>
                                <th>Last Date of Transaction</th>
                                <th>Vehicle No./User Name</th>
                                <th>Mobile Number</th>
                                <th>Card Balance(in Rs.)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ int Slno = 1;}
                            @foreach (var item in Model.Data)
                            {
                                <tr>
                                    <td>@Slno</td>
                                    <td>@item.CardNo</td>
                                    <td>@item.LastDateOfTransaction</td>
                                    <td>@item.VechileNo</td>
                                    <td>@item.Mobileno</td>
                                    <td>@item.CardBalance</td>
                                
                                </tr>
                                Slno++;
                            }
                        </tbody>
                    </table>
                </div>

            </div>
        
    </div>

    <div class="clearfix"></div>
}
else
{
    <div class="alert alert-danger text-center ml-3 mr-3">
        No Records found!
    </div>
}

<script type="text/javascript">
    $(document).ready(function () {
        $('.table').DataTable({
            "lengthMenu": [10, 20, 50, 100, 200, 500],
            "oLanguage": {
                "sLengthMenu": "Display _MENU_ Records",
                "info": "Showing _START_ to _END_ of _TOTAL_ Records",
            }
        });
    });
</script>

