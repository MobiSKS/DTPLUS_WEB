@model HPCL.Common.Models.ViewModel.Customer.CustomerBalanceInfoModel
@using HPCL.Common.Resources
@{
    ViewData["Title"] = "Customer Balance Info";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mt-1 w-100">
    <marquee width="100%" direction="left">
        Dear Fleet Customer, For TDS related information, Please check the latest notification at TDS Alert
    </marquee>
</div>

<div class="col-lg-12 px-0">
    <div class="bg-white p-2 p-md-4">
        <ul class="breadcrumb bread_custom bg-transparent m-0 pb-1 py-0 px-0">
            <li class="breadcrumb-item"><a href="#" class="text_primary">Financials</a> </li>
            <li class="breadcrumb-item font-weight-light">Balance Info</li>
        </ul>
        <form>
            <div class="w-100">
                <div class="col-lg-12 col-md-12 col-12 pl-0 pr-0">
                    <div class="border-1 rounded border-grey pb-3">
                        <p class="text_primary px-3 py-2 bg-grey m-0 font-weight-bold">Balance Info</p>
                        <div class="alert alert-danger alert-cust-success" id="dvRemarks" style="@(Model.Remarks=="" ? "display:none":"display:block")">
                            @Html.DisplayFor(m => m.Remarks)
                        </div>
                        <div class="col-lg-12 col-md-12 col-12 py-3">
                            <div class="d-flex align-items-center flex-wrap">
                                <div class="col-lg-6 col-12">
                                    <div class="d-flex align-items-center flex-wrap mb-3">
                                        <label class="font-weight-normal col-md-4 col-12">Customer ID <sup class="text-danger">*</sup></label>
                                        <div class="col-md-7 col-12 offset-md-1">
                                            <div class="custom_select">
                                                @Html.TextBoxFor(m => m.CustomerId, new { @class = "form-control", maxlength = "10", onkeypress = "return isNumberKey(event)", autocomplete = "off" })
                                                <span class="error" id="CustomerId_error"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-12">
                                    <div class="d-flex align-items-center flex-wrap mb-3">
                                        <label class="font-weight-normal offset-md-1 col-md-4 col-12">Customer Status <sup class="text-danger">*</sup></label>
                                        <div class="col-md-7 col-12">
                                            <div class="form-check form-check-inline">
                                                @Html.RadioButtonFor(m => m.CustomerStatus, "Live", new { @id = "rbtnCustomerStatusLive" })
                                                <label class="form-check-label" for="inlineRadio1">Live</label>
                                            </div>
                                            <div class="form-check form-check-inline">
                                                @Html.RadioButtonFor(m => m.CustomerStatus, "Test", new { @id = "rbtnCustomerStatusTest" })
                                                <label class="form-check-label" for="inlineRadio2">Test</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="d-flex align-items-center justify-content-center mt-0">
                                <div class="px-2">
                                    <button class="btn btn_primary" type="button" id="btnSearch">@Label.Search</button>
                                </div>
                                <div class="px-2">
                                    <button class="btn btn_primary" type="button" id="btnReset">@Label.Reset</button>
                                </div>
                                <div class="px-2">
                                    <button class="btn btn_primary" type="button">Recharge Your Account</button>
                                </div>
                                <div class="px-2">
                                    <button class="btn btn_primary" type="button">Add/Edit Mobile</button>
                                </div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                    </div>

                    <div class="col-lg-12 col-md-12 col-12 pl-0 pr-0 mt-3" id="dvCustomerBalance" style="width:100%;display:none;">
                        <table id="CustomerBalanceTbl" class="table1 table-striped d-md-table d-block table-bordered table-responsive nowrap mt-3" style="width:100%;">
                            <thead>
                                <tr>
                                    <th>Customer ID</th>
                                    <th>Card Balance</th>
                                    <th>CCMS Balance</th>
                                    <th>Drivestars</th>
                                    <th>Expired Drivestars</th>
                                    <th>Expiring Drivestars</th>
                                    <th>Daily Cash Limit</th>
                                    <th>Daily Cash Limit Balance</th>
                                    <th>Card-wise Balances</th>
                                </tr>
                            </thead>

                        </table>
                    </div>
                </div>
            </div>
        </form>
        <div class="col-lg-12 col-md-12 col-12 pl-0 pr-0 mt-3 toBeHiddenOnSuccess" id="customerCardWiseBalancesTbl">
        </div>
        <div class="clearfix"></div>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        console.log(document.getElementById("rbtnCustomerStatusLive").checked);
        console.log(document.getElementById("rbtnCustomerStatusTest").checked);
        if (!document.getElementById("rbtnCustomerStatusLive").checked && !document.getElementById("rbtnCustomerStatusTest").checked) {
            document.getElementById("rbtnCustomerStatusLive").checked = true;
        }

    });

    function isNumberKey(evt) {
        var charCode = (evt.which) ? evt.which : event.keyCode;
        if (charCode != 46 && charCode > 31
            && (charCode < 48 || charCode > 57))
            return false;

        return true;
    }
    $("#btnReset").click(function () {

        $("#CustomerId").val("");
        document.getElementById("CustomerId_error").innerHTML = "";
        document.getElementById('dvCustomerBalance').style.display = 'none';
        document.getElementById('customerCardWiseBalancesTbl').style.display = 'none';
    });

    $("#btnSearch").click(function () {
        //debugger;
        var customerId = document.getElementById("CustomerId").value;
        if (customerId == "") {
            document.getElementById("CustomerId_error").innerHTML = "Customer Id is required";
            $("#CustomerId").focus;
            return (false);
        }
        else {
            document.getElementById("CustomerId_error").innerHTML = "";
        }

        //var found = false;

            $.ajax({
                type: 'POST',  // http method
                url: '@Url.Action("GetCustomerBalanceInfo", "Customer")',
                data: { CustomerID: customerId },  // data to submit
                dataType: "json",
                success: function (data, status, xhr) {
                    console.log(data);
                    console.log(data.customerBalanceResponse);
                    console.log(status);

                    if (status == 'success') {
                        $("#CustomerBalanceTbl td").parent().remove();

                        for (var i = 0; i < data.customerBalanceResponse.length; i++) {
                            var customerID = data.customerBalanceResponse[i].customerID;
                            var rows = "<tbody><tr>"
                                + "<td class='nav-item'><a class='CardNumber' data-toggle='tab' href='#BasicInformation' onclick='ViewCardDetails(this)' role='tab'><span class='rowCardNo'>" + (data.customerBalanceResponse[i].customerID || '') + "</span></a></td>"
                                + "<td><span class='rowData CustReferenceNo'>" + (data.customerBalanceResponse[i].cardBalance || '') + "</span></td>"
                                + "<td><span class='rowData cusId'>" + (data.customerBalanceResponse[i].ccmsLimitValue || '') + "</span></td>"
                                + "<td><span class='rowData'>" + (data.customerBalanceResponse[i].drivestars || '') + "</span></td>"
                                + "<td><span class='rowData'>" + (data.customerBalanceResponse[i].expiredDrivestars || '') + "</span></td>"
                                + "<td><span class='rowData'>" + (data.customerBalanceResponse[i].expiringDrivestars || '') + "</span></td>"
                                + "<td><span class='rowData'>" + (data.customerBalanceResponse[i].cashPurseLimit || '') + "</span></td>"
                                + "<td><span class='rowData'>" + (data.customerBalanceResponse[i].dailyCashLimitBalance || '') + "</span></td>"
                                //+ "<td><div class='d-flex align-items-center justify-content-left' style='min-height: 100%'><div class='px-2'><a href='#' class='d-block action_btn'><img src='assets/images/search_icon2.png' alt='View' class='img-fluid'></a></div></div></td></tr></tbody>"
                                + "<td class='nav-item'><a class='CardNumber' data-toggle='tab' onclick='ViewCardDetails(" + customerID + ")' role='tab'><img src='assets/images/search_icon2.png' alt='View' class='img-fluid'></a></td></tr></tbody>"


                            $('#CustomerBalanceTbl').append(rows);


                        }

                        document.getElementById('dvCustomerBalance').style.display = 'block';


                        //if (data == "Failed to load Customer Details")
                            //document.getElementById("RBEName").value = "";
                    }
                    else {
                        //$("#RBEId_error").html("");
                        //document.getElementById("RBEName").value = "";
                        //found = false;
                    }
                },
                error: function (xhr, ajaxOptions, thrownError) {
                    //document.getElementById("RBEName").value = "";
                },
                statusCode: {
                    1024: function () {
                        //document.getElementById("RBEName").value = "";
                    }
                }
            });

    });

    function ViewCardDetails(customerId) {
        debugger;
        //var customerId = document.getElementById("CustomerId").value;
        //if (customerId == "") {
        //    document.getElementById("CustomerId_error").innerHTML = "Customer Id is required";
        //    $("#CustomerId").focus;
        //    return (false);
        //}
        //else {
        //    document.getElementById("CustomerId_error").innerHTML = "";
        //}

        if (customerId == "") {
            return (false);
        }
        else {
            
        }

        //var found = false;
        customerCardWiseBalancesTbl.style.display = "block";


        $.ajax({
            type: 'GET',  // http method
            url: '@Url.Action("GetCustomerCardWiseBalance", "Customer")',
            contentType: "application/json; charset=utf-8",
            data: { CustomerID: customerId },
            dataType: "text",
            success: function (data, status, xhr) {
                var v = data;
                if (status == 'success') {
                    $("#customerCardWiseBalancesTbl").html(data);
                    $('html, body').animate({
                        scrollTop: $("#customerCardWiseBalancesTbl").offset().top
                    }, 2000);
                }
                else {
                    console.log(v);
                }
            },
            error: function (jqXhr, textStatus, errorMessage) {
                alert("Error");
            }
        });


    }

</script>