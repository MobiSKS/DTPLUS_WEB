@model HPCL.Common.Models.ViewModel.Dealer.DealerCreditClosePaymentModel
<div class="col-lg-12 px-0">
    <div class="bg-white p-2 p-md-4">
        <ul class="breadcrumb bread_custom bg-transparent m-0 pb-1 py-0 px-0">
            <li class="breadcrumb-item"><a href="@Url.Action("DealerCreditSaleOutstanding","Dealer")" class="text_primary">Credit Sale Outstanding</a> </li>
            <li class="breadcrumb-item font-weight-light">Credit Close Payment</li>
        </ul>
        <div id="reason" class="mb-3 text-center alert" style="display:none"></div>
        <form class="toBeHiddenOnSuccess">
            <div class="w-100">
                <div class="col-lg-12 col-md-12 col-12 pl-0 pr-0">
                    <div class="border-1 rounded border-grey pb-3">
                        <p class="text_primary px-3 py-2 bg-grey m-0 font-weight-bold">Credit Close Payment</p>
                        <div class="col-lg-12 col-md-12 col-12 py-3">
                            <div class="d-flex align-items-center flex-wrap">
                                <div class="col-lg-6 col-12">
                                    <div class="d-flex align-items-center flex-wrap mb-3">
                                        <label class="font-weight-normal col-md-5 col-12">Merchant ID :</label>
                                        <div class="col-md-7 col-12">
                                            <div class="custom_select">
                                                @Model.Data[0].MerchantID
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div class="d-flex align-items-center flex-wrap">
                                <div class="col-lg-6 col-12">
                                    <div class="d-flex align-items-center flex-wrap mb-3">
                                        <label class="font-weight-normal col-md-5 col-12">Retail Outlet Name :</label>
                                        <div class="col-md-7 col-12">
                                            <div class="custom_select">

                                                @Model.Data[0].RetailOutletName
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div class="d-flex align-items-center flex-wrap">
                                <div class="col-lg-6 col-12">
                                    <div class="d-flex align-items-center flex-wrap mb-3">
                                        <label class="font-weight-normal col-md-5 col-12">Customer ID :</label>
                                        <div class="col-md-7 col-12">
                                            <div class="custom_select">
                                                @Model.Data[0].CustomerId
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div class="d-flex align-items-center flex-wrap">
                                <div class="col-lg-6 col-12">
                                    <div class="d-flex align-items-center flex-wrap mb-3">
                                        <label class="font-weight-normal col-md-5 col-12">Customer Name :</label>
                                        <div class="col-md-7 col-12">
                                            <div class="custom_select">
                                                @Model.Data[0].IndividualOrgName
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div class="d-flex align-items-center flex-wrap">
                                <div class="col-lg-6 col-12">
                                    <div class="d-flex align-items-center flex-wrap mb-3">
                                        <label class="font-weight-normal col-md-5 col-12">Outstanding :</label>
                                        <div class="col-md-7 col-12">
                                            <div class="custom_select">
                                                @Model.Data[0].Outstanding
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div class="d-flex align-items-center flex-wrap">
                                <div class="col-lg-6 col-12">
                                    <div class="d-flex align-items-center flex-wrap mb-3">
                                        <label class="font-weight-normal col-md-5 col-12">Limit :</label>
                                        <div class="col-md-7 col-12">
                                            <div class="custom_select">
                                                @Model.Data[0].Limit
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div class="d-flex align-items-center flex-wrap">
                                <div class="col-lg-6 col-12">
                                    <div class="d-flex align-items-center flex-wrap mb-3">
                                        <label class="font-weight-normal col-md-5 col-12">Limit Balance :</label>
                                        <div class="col-md-7 col-12">
                                            <div class="custom_select">
                                                @Model.Data[0].LimitBalance
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div class="d-flex align-items-center flex-wrap">
                                <div class="col-lg-6 col-12">
                                    <div class="d-flex align-items-center flex-wrap mb-3">
                                        <label class="font-weight-normal col-md-5 col-12">Amount<sup class="text-danger">*</sup></label>
                                        <div class="col-md-7 col-12">
                                            <div class="custom_select">
                                                @Html.TextBoxFor(m => m.Data[0].Amount, new { @class = "form-control"})

                                                <span class="error" id="amount_error"></span>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div class="d-flex align-items-center flex-wrap">
                                <div class="col-lg-6 col-12">
                                    <div class="d-flex align-items-center flex-wrap mb-3">
                                        <label class="font-weight-normal col-md-5 col-12">Source of Payment<sup class="text-danger">*</sup></label>
                                        <div class="col-md-7 col-12">
                                            <div class="custom_select">
                                                @Html.DropDownListFor(m => m.Data[0].SourceofPayment, new[]{
                                                new SelectListItem(){ Text = "CCMS", Value = "CCMS",Selected=true},
                                                }, null, new { @class = "form-control" ,disabled="true"})

                                                <span class="error" id="sourceofPay_error"></span>

                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="d-flex align-items-center flex-wrap">

                                <div class="col-lg-6 col-12">
                                    <div class="d-flex align-items-center flex-wrap mb-3 justify-content-center">
                                        <div class="px-2">
                                            <button class="btn btn_primary" type="button" id="btnSubmit">SUBMIT</button>
                                        </div>
                                        <div class="px-2">
                                            <button class="btn btn_primary" type="button" id="btnReset" onclick="location.href='@Url.Action("DealerCreditSaleOutstanding", "Dealer" ,new { reset="Y" })'">CANCEL</button>
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <div id="show_details" style="display:none;">
                                <p class="text_primary px-3 py-2 bg-grey m-0 font-weight-bold">Verify One Time Password</p>
                                <div class="d-flex align-items-center flex-wrap py-3">
                                    <div class="col-lg-6 col-12">
                                        <div class="d-flex align-items-center flex-wrap mb-3">
                                            <label class="font-weight-normal col-md-5 col-12">OTP<sup class="text-danger">*</sup></label>
                                            <div class="col-md-7 col-12">
                                                <div class="custom_select">
                                                    @Html.TextBoxFor(m => m.Data[0].OneTP, new { @class = "form-control"})

                                                    <span class="error" id="otp_error"></span>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                                <div class="d-flex align-items-center flex-wrap">

                                    <div class="col-lg-6 col-12">
                                        <div class="d-flex align-items-center flex-wrap mb-3 justify-content-center">
                                            <div class="px-2">
                                                <button class="btn btn_primary" type="button" id="btnProcess">PROCESS</button>
                                            </div>
                                            <div class="px-2">
                                                <button class="btn btn_primary" type="button" id="btnReset" onclick="location.href='@Url.Action("DealerCreditSaleOutstanding", "Dealer" ,new { reset="Y" })'">CANCEL</button>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>

        <div class="clearfix"></div>

    </div>
</div>
<script type="text/javascript">
     $("#btnSubmit").on("click",(function(e){
         var customerId = $("#CustomerID").val();
         var merchantId=$("#MerchantID").val();
          var fromdate = $("#FromDate").val();
          var todate = $("#ToDate").val();
         var flag = "Y";
          if (fromdate == "") {
              $("#fromDate_error").attr("style", "display:block");
              $("#fromDate_error").html("Select From Date");
              flag = "N";
          }

          if (todate == "") {
              $("#toDate_error").attr("style", "display:block");
              $("#toDate_error").html("Select To Date");
              flag = "N";
          }
          if (fromdate != "" && todate != "") {
              flag = checkDates("fromDate_error");
          }
          if(flag=="Y"){
              $.ajax({
                type: 'POST',  // http method
                url: '@Url.Action("GenerateOTPCreditClosePayment", "Dealer")',
                data: { CustomerID: customerId, MerchantID: merchantId, FromDate: fromdate, ToDate: todate},
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (data,status,xhr) {
                    var v = data;
                        $("#show_details").attr("style","display:block");
                },
                error: function (jqXhr, textStatus, errorMessage) {
                    alert("Error" + errorMessage);
                }
            });
        }
     }));
</script>