@model List<HPCL_Web.Models.Officer.OfficerDetailsTable>


<table id="OfficerTable" class="table table-striped table-bordered dt-responsive nowrap mt-3" style="width:100%">
    <thead>
        <tr>
            <th>ZO</th>
            <th>RO</th>
            <th>State</th>
            <th>District</th>
            <th>Marketing Officer Name</th>
            <th>Marketing Officer Email</th>
            <th>Zonal Officer</th>
            <th>Zonal Officer Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ZonalOfficeName</td>
                <td>@item.RegionalOfficeName</td>
                <td>@item.StateName</td>
                <td>@item.DistrictName</td>
                <td>@item.MarketingOfficerName</td>
                <td>@item.MarketingOfficerEmail</td>
                <td>@item.ZonalOfficerName</td>
                <td>@item.ZonalOfficerEmail</td>
            </tr>
        }
    </tbody>
</table>

<script type="text/javascript">
    $(document).ready(function () {
        $('.table').DataTable({
            "lengthMenu": [5, 10, 20, 50, 100, 200, 500],
            "oLanguage": {
                "sLengthMenu": "Display _MENU_ Records",
                "info": "Showing _START_ to _END_ of _TOTAL_ Records",
            }
        });
    });
</script>