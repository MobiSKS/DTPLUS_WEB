    }

    function stopLoader() {

    }

    $("#regionalOffice").change(function () {
        var id = this.value;
        $("#RegionalOfcIdVal").val(id);
    });

    $("#district").change(function () {
        var id = this.value;
        $("#DistrictIdVal").val(id);
    });
</script>