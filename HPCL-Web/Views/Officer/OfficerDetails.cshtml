                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-12">
                                    <div class="d-flex align-items-center flex-wrap mb-3">
                                        <label class="font-weight-normal col-md-4 col-12">Regional Office <sup class="text-danger">*</sup></label>
                                        <div class="col-md-7 col-12 offset-md-1">
                                            <div class="custom_select">
                                                <select name="regionalOffice" id="regionalOffice" class="form-control">
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="d-flex align-items-center flex-wrap">
                                <div class="col-lg-6 col-12">
                                    <div class="d-flex align-items-center flex-wrap mb-3">
                                        <label class="font-weight-normal col-md-4 col-12">State Name <sup class="text-danger">*</sup></label>
                                        <div class="col-md-7 col-12">
                                            <div class="custom_select">
                                                @Html.DropDownListFor(m => m.StateID, new SelectList(Model.OfficerStates, "StateID", "StateName"), new { @class = "form-control", onchange = "getDistrict()" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-12">
                                    <div class="d-flex align-items-center flex-wrap mb-3">
                                        <label class="font-weight-normal col-md-4 col-12">District Name <sup class="text-danger">*</sup></label>
                                        <div class="col-md-7 col-12 offset-md-1">
                                            <div class="custom_select">
                                                <select name="district" id="district" class="form-control">
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="d-flex align-items-center justify-content-center mt-0">
                                <div class="px-2 mb-3">
                                    <button class="btn btn_primary" type="button" onclick="searchOfficerDetailsTbl()">Search</button>
                                </div>
                                <div class="px-2 mb-3">
                                    <button class="btn btn_primary" type="button" onclick="return showregAddress()">Reset</button>
                                </div>
                                <div class="px-2 mb-3">
                                    <button class="btn btn_primary" type="button" onclick="">Export to Excel</button>
                                </div>
                            </div>
                        </div>
                        <div style="display:none;">@Html.TextBoxFor(m => m.RegionalOfcIdVal)</div>
                        <div style="display:none;">@Html.TextBoxFor(m => m.DistrictIdVal)</div>
                        <div class="clearfix"></div>
                        <div class="px-3" id="officerDetailsTbl">

                        </div>
                    </div>
                </div>
            </div>
        </form>
        <div class="clearfix"></div>
    </div>
</div>

<script type="text/javascript">
    //var zonalOfcId = $("#ZonalOfcID").val();
    //var regionalOfcId = $("#RegionalOfcIdVal").val();
    //var stateId = $("#StateID").val();
    //var districtId = $("#DistrictIdVal").val();

    $(document).ready(function () {
        $('<option>',
            {
                value: "0",
                text: "--All--"
            }).html("--All--").appendTo("#regionalOffice");

