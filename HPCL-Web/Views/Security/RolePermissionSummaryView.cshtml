<script type="text/javascript">
    $(document).ready(function () {
        var count=$("#tblCount").val();
        console.log(count);
        var chkDataCount=0;
        debugger;
        if(count>0){
             $(".parent").attr("style","display:none");
            for(var i=1;i<=count;i++){
               
                var parentId="";
                var chkCount=0,chkmainrowCnt=0;
                 $("#Permissiontable_"+i+" tbody tr").each(function () {
                    var row = $(this);
                    if(row[0].rowIndex>2){
                        if(row[0].cells.length>1){

                                var menuId = row[0].cells[3].textContent;
                                parentId=row[0].cells[4].textContent;
                                var subParentId=row[0].cells[5].textContent;
                                var title=row[0].cells[6].textContent;
                                if(row.find('input[name=chkView_'+menuId+']').is(":checked") || row.find('input[name=chkAll_'+menuId+']').is(":checked")){
                                    chkCount++;
                                    chkDataCount++;
                                    if(row.attr("id").indexOf("mainrow_")!=-1)
                                        chkmainrowCnt++;
                                    if(!($("#nested-collapse_"+i).hasClass("show")))
                                        $("#nested-collapse_"+i).addClass("show");
                                    $("#title_"+i).removeClass("collapsed");
                                    $("#title_"+i).attr("aria-expanded",true);

                                    $("#"+parentId).addClass("roleParent");
                                    $("#"+parentId).removeClass("collapsed");
                                    $("#"+parentId).attr("aria-expanded",true);

                                    if(!($("#"+subParentId).hasClass("show")))
                                        $("#"+subParentId).addClass("show");
                                    $("#"+parentId).attr("style","display:block");
                                }
                                else
                                   row[0].style.display="none";

                        }
                     }
                 });
                 debugger;
                 if(chkCount==0){
                     console.log(i);
                     console.log($("#"+parentId));
                     if($("#"+parentId).hasClass("roleParent"))
                       $("#"+parentId).attr("style","display:block");
                    else
                        $("#"+parentId).attr("style","display:none");
                     $("#title_"+i).attr("style","display:none");
                     $("#nested-collapse_"+i).attr("style","display:none");
                     $(".topHeader_"+i).attr("style","display:none");
                     $(".subHeader_"+i).attr("style","display:none");
                     $(".childHeader_"+i).attr("style","display:none");
                 }
                 else{

                        $("#"+parentId).attr("style","display:block");

                 }
                 if(chkmainrowCnt==0){
                     $(".topMHeader_"+i).attr("style","display:none");
                     $(".subMHeader_"+i).attr("style","display:none");
                     $(".childMHeader_"+i).attr("style","display:none");
                     
                 }

            }
        }
        debugger;
        if(chkDataCount==0){
            $("#noRecord").attr("style","display:block");
            $("#noRecord").html("No permission summary for this role");

             $("#hideforNoRecord").attr("style","display:none");
        }
    });
</script>