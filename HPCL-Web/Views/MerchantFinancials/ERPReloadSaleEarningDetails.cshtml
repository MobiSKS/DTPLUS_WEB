@model HPCL.Common.Models.ViewModel.MerchantFinancials.MerchantERPReloadSaleEarningModel
@using HPCL.Common.Resources

<div class="col-lg-12">
    <div class="bg-white p-2 p-md-4">
        <ul class="breadcrumb bread_custom bg-transparent m-0 pb-1 py-0 px-0">
            <li class="breadcrumb-item"><a href="@Url.Action("Index","MerchantFinancials")" class="text_primary">Financial</a> </li>
            <li class="breadcrumb-item font-weight-light">ERP Reload/Sale/Earning Details</li>
        </ul>
        @using (Html.BeginForm(null, null, FormMethod.Get, new { id = "form1", @class = "toBeHiddenOnSuccess" }))
        {
            <div class="w-100">
                <div class="col-lg-12 col-md-12 col-12 pl-0 pr-0">
                    <div class="border-1 rounded border-grey pb-3">
                        <p class="text_primary px-3 py-2 bg-grey m-0 font-weight-bold">ERP Reload/Sale/Earning Details</p>
                        <div class="col-lg-12 col-md-12 col-12 py-3">
                            <div class="d-flex align-items-center flex-wrap">
                                <div class="col-lg-12 col-12">
                                    <div class="d-flex align-items-center flex-wrap mb-3">
                                        <label class="col-md-2 col-12">&nbsp;</label>
                                        <div class="col-md-10 col-12">
                                            <div class="form-check form-check-inline">
                                                @*<input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio3" value="option3">*@
                                                @Html.RadioButtonFor(m => m.TerminalOrMerchant, "Merchant", new { @class="form-check-input", @id = "rbtnMerchant" })
                                                <label class="form-check-label" for="inlineRadio3">Merchant</label>
                                            </div>
                                            <div class="form-check form-check-inline">
                                                @*<input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio2" value="option2">*@
                                                @Html.RadioButtonFor(m => m.TerminalOrMerchant, "Terminal", new { @class="form-check-input", @id = "rbtnTerminal" })
                                                <label class="form-check-label" for="inlineRadio2">Terminal</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="d-flex align-items-center flex-wrap">
                                <div class="col-lg-6 col-12">
                                    <div class="d-flex align-items-center flex-wrap mb-3">
                                        <label class="font-weight-normal col-md-4 col-12"><label id="lblMerchant">Merchant ID</label> <sup class="text-danger">*</sup></label>
                                        <div class="col-md-7 col-12">
                                            <div class="custom_select">
                                                @Html.TextBoxFor(m => m.MerchantId, new { @id = "MerchantId", @class = "form-control", maxlength = "10", onkeypress = "return isNumberKey(event)", autocomplete = "off" })
                                                <span class="error" id="MerchantId_error"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-12">
                                    <div class="d-flex align-items-center flex-wrap mb-3">
                                        <label class="font-weight-normal offset-md-1 col-md-4 col-12">From Date <sup class="text-danger">*</sup></label>
                                        <div class="col-md-7 col-12">
                                            <div class="custom_select">
                                                @Html.TextBoxFor(m => m.FromDate, new { @class = "form-control date", @type = "date" })
                                            </div>
                                            <span class="error" id="fromDate_error"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="d-flex align-items-center flex-wrap">
                                <div class="col-lg-6 col-12">
                                    <div class="d-flex align-items-center flex-wrap mb-3">
                                        <label class="font-weight-normal col-md-4 col-12">To Date <sup class="text-danger">*</sup></label>
                                        <div class="col-md-7 col-12">
                                            <div class="custom_select">
                                                @Html.TextBoxFor(m => m.ToDate, new { @class = "form-control date", @type = "date" })
                                            </div>
                                            <span class="error" id="toDate_error"></span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="clearfix"></div>
                            <div class="d-flex align-items-center justify-content-center mt-0">
                                <div class="px-2">
                                    <button class="btn btn_primary" type="submit" id="btnSearch">@Label.Search</button>
                                </div>
                                <div class="px-2">
                                    <button class="btn btn_primary" type="button" id="btnReset">@Label.Reset</button>
                                </div>
                                @*<div class="px-2">
                                    <button class="btn btn_primary" type="button" id="btnExport">@Label.ExportToExcel</button>
                                </div>*@
                            </div>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
        }
        <div id="show_Table" class="toBeHiddenOnSuccess">
            @if (Model.SaleEarningDetails.Count() > 0)
            {
                <div class="table-responsive">
                    <table class="datatable table table-striped table-bordered d-md-table d-block text-nowrap display table-responsive mt-3" style="width:100%;" id="TerminalRequestDetails">
                        <thead style="background-color:lightgray;">
                            <tr>
                                <th style="width:5%;">Sr No</th>
                                <th style="width:10%;">Terminal ID</th>
                                <th style="width:5%;">Batch ID</th>
                                <th style="width:10%;">Settlement Date</th>
                                <th style="width:10%;">Sale(Rs.)</th>
                                <th style="width:10%;">Reload(Rs.)</th>
                                <th style="width:10%;">Earning(Rs.)</th>
                            </tr>
                        </thead>
                        <tbody id="searchTableBody">
                            @{
                                int i = 0;
                            }
                            @foreach (var item in Model.SaleEarningDetails)
                            {
                                i = i + 1;

                                <tr>
                                    <td>@item.SrNumber</td>
                                    <td>@item.TerminalId</td>
                                    <td>@item.BatchId</td>
                                    <td>@item.SettlementDate</td>
                                    <td>@item.Sale</td>
                                    <td>@item.Reload</td>
                                    <td>@item.Earning</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <div class="clearfix"></div>
            }
            else
            {
        <div class="mt-3 text-center" style="background-color: #f9c9c9; color: #8d0d0d; border-color: #f3abab;padding:5px;border-radius:4px;@(Model.Message=="" ? "display:none":"display:block")">
            @Model.Message
        </div>
            }
        </div>
    </div>
</div>
<script type="text/javascript">
    //debugger;

    var fromdate = $("#FromDate").val();
    var todate = $("#ToDate").val();
    var today = new Date();
    var dd = String(today.getDate()).padStart(2, '0');
    var mm = String(today.getMonth() + 1).padStart(2, '0'); //January is 0!
    var yyyy = today.getFullYear();
    today = yyyy + '-' + mm + '-' + dd;

    $(document).ready(function () {
        if (fromdate == "") {
            setDates();
        }
        if ($('input[name=TerminalOrMerchant]:checked').val() == "Merchant") {
            document.getElementById("lblMerchant").innerHTML = "Merchant";
        } else {
            document.getElementById("lblMerchant").innerHTML = "Terminal";
        }
    });

    $("#btnSearch").on("click", (function (e) {
        debugger;
        var fromdate = $("#FromDate").val();
        var todate = $("#ToDate").val();
        var merchantId = $("#MerchantId").val().trim();
        var flag = "Y";
        if (fromdate == "") {
            $("#fromDate_error").attr("style", "display:block");
            $("#fromDate_error").html("Select From Date");
            flag = "N";
        }

        if (todate == "") {
            $("#toDate_error").attr("style", "display:block");
            $("#toDate_error").html("Select To Date");
            flag = "N";
        }
        if (fromdate != "" && todate != "") {
            flag = checkDates();
        }
        if (merchantId == "") {
            if ($('input[name=TerminalOrMerchant]:checked').val() == "Merchant") {
                $("#MerchantId_error").attr("style", "display:block");
                $("#MerchantId_error").html("Please enter valid Merchant ID");
                flag = "N";
            }
            else {
                $("#MerchantId_error").attr("style", "display:block");
                $("#MerchantId_error").html("Please enter valid Terminal ID");
                flag = "N";
            }
        }
        else {
            $("#MerchantId_error").attr("style", "display:none");
            $("#MerchantId_error").html("");
        }

        if (merchantId != "") {
            if ($('input[name=TerminalOrMerchant]:checked').val() == "Merchant") {
                if (!merchantId.match(mappedMerchantID)) {
                    $("#MerchantId_error").attr("style", "display:block");
                    $("#MerchantId_error").html("Please enter valid Merchant ID");
                    flag = "N";
                }
            }
            else {
                if (!merchantId.match(mappedterminalID)) {
                    $("#MerchantId_error").attr("style", "display:block");
                    $("#MerchantId_error").html("Please enter valid Terminal ID");
                    flag = "N";
                }
            }
        }

        var fromDateArray = fromdate.split("-");
        var fromDateStr = fromDateArray[0] + "/" + fromDateArray[1] + "/" + fromDateArray[2];

        var toDateArray = todate.split("-");
        var toDateStr = toDateArray[0] + "/" + toDateArray[1] + "/" + toDateArray[2];
        var NoOfDays = getNumberOfDays(fromDateStr, toDateArray);
        console.log(NoOfDays);

        if (NoOfDays > 31) {
            $("#fromDate_error").attr("style", "display:block");
            $("#fromDate_error").html("Difference between From Date and To Date should not be more than 31 days");
            flag = "N";
        }

        if (flag == "Y") {
            $("#toDate_error").attr("style", "display:none");
            $("#toDate_error").html("");
            $("#fromDate_error").attr("style", "display:none");
            $("#fromDate_error").html("");
            $("#MerchantId_error").attr("style", "display:none");
            $("#MerchantId_error").html("");
        }
        if (flag == "N")
            e.preventDefault();

    })
    );

    $("#btnReset").click(function () {
        setDates();
        $("#show_Table").html("");
        $("#MerchantId").val("");
        $("#fromDate_error").html("");
        $("#toDate_error").html("");
        $("#MerchantId_error").html("");
    });
    function setDates() {
        var fromd = new Date();
        fromd.setMonth(fromd.getMonth() - 1);
        var dd = String(fromd.getDate()).padStart(2, '0');
        var mm = String(fromd.getMonth() + 1).padStart(2, '0'); //January is 0!
        var yyyy = fromd.getFullYear();

        fromd = yyyy + '-' + mm + '-' + dd;
        $("#FromDate").val(fromd);
        $("#ToDate").val(today);
    };
            
    $(".date").on('change', function (e) {

        checkDates();
        $("#show_Table").html("");
    });

    function checkDates() {
        var fromD = $("#FromDate").val();
        var toD = $("#ToDate").val();
        var dateflag = "Y";
        if (fromD != "" && toD != "") {
            if (fromD > toD) {

                $("#fromDate_error").attr("style", "display:block");
                $("#fromDate_error").html("'From Date' should be less or equal to 'To date'");
                dateflag = "N";
            }
            else {
                $("#fromDate_error").html("");
                $("#fromDate_error").attr("style", "display:none");
            }
        }

        if (toD != "") {
            if (toD > today) {
                $("#toDate_error").attr("style", "display:block");
                $("#toDate_error").html("To Date should be less or equal to Today's date");
                dateflag = "N";
            }
            else {
                $("#toDate_error").html("");
                $("#toDate_error").attr("style", "display:none");
            }
        }

        return dateflag;
    }

    $('input[name=TerminalOrMerchant]').click(function () {
        if ($('input[name=TerminalOrMerchant]:checked').val() == "Merchant") {
            document.getElementById("lblMerchant").innerHTML = "Merchant";           
        } else {
            document.getElementById("lblMerchant").innerHTML = "Terminal";
        }
        $("#MerchantId_error").html("");
        document.getElementById("MerchantId").value = "";
    });
   

</script>