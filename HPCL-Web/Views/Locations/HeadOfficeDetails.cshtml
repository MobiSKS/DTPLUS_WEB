@model HPCL.Common.Models.ViewModel.Locations.HeadOfficeDetails

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-ajax-unobtrusive/3.2.6/jquery.unobtrusive-ajax.js"></script>

<div class="col-lg-12">
    <div class="bg-white p-2 p-md-4">
        <form method="post" data-ajax="true" data-ajax-controller="Locations" data-ajax-action="HeadOfficeDetails" data-ajax-method="POST" data-ajax-success="OnSuccessHeadOffice" data-ajax-failure="OnFailure">
            <div class="tab-content mt-3" id="myTabContent">
                <div class="tab-pane fade show active" id="basicInfo" role="tabpanel" aria-labelledby="basicInfo-tab">
                    <div class="border-1 rounded border-grey w-100">
                        <div class="col-lg-12 col-md-12 col-12 pl-0 pr-0">
                            <p class="text_primary px-3 py-2 bg-grey m-0 font-weight-bold">Head Office Details</p>
                            <div class="form-group d-flex align-items-center flex-wrap">
                            </div>

                            <div class="col-12 col-md-12">
                                <div class="alert alert-primary" role="alert" style="padding: 10px; display:none;">
                                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                                    <p id="responseAlert"></p>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="d-flex align-items-center flex-wrap">
                                <div class="col-12 col-md-6">
                                    <div class="d-flex align-items-center flex-wrap mb-3">
                                        <label class="font-weight-normal col-md-5 col-12">Head Office Code <sup class="text-danger">*</sup></label>
                                        <div class="col-md-7 col-12">
                                            <div class="custom_select">
                                                @Html.TextBoxFor(m => m.HQCode, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.HQCode, "", new { @class = "text-danger" })
                                            </div>
                                            @* <span class="error" id="hqCode_error"></span>*@
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-md-6">
                                    <div class="d-flex align-items-center flex-wrap mb-3">
                                        <label class="font-weight-normal offset-md-1 col-md-4 col-12">Head Office Name <sup class="text-danger">*</sup></label>
                                        <div class="col-md-7 col-12">
                                            <div class="custom_select">
                                                @Html.TextBoxFor(m => m.HQName, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.HQName, "", new { @class = "text-danger" })
                                            </div>
                                            @*<span class="error" id="hqName_error"></span>*@
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="d-flex align-items-center flex-wrap">
                                <div class="col-12 col-md-6">
                                    <div class="d-flex align-items-center flex-wrap mb-3">
                                        <label class="font-weight-normal col-md-5 col-12">Head Office Short Name <sup class="text-danger">*</sup></label>
                                        <div class="col-md-7 col-12">
                                            <div class="custom_select">
                                                @Html.TextBoxFor(m => m.HQShortName, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.HQShortName, "", new { @class = "text-danger" })
                                            </div>
                                            @*<span class="error" id="hqShortName_error"></span>*@
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="d-flex align-items-center justify-content-center mb-3">
                            <div class="px-2">
                                <button class="btn btn_primary" type="submit" id="btnSave" name="submit" onclick="document.getElementById('responseAlert').style.display = 'block';">Save</button>
                            </div>
                            <div class="px-2">
                                <button class="btn btn_primary" id="=btnCancel" name="cancel">Cancel</button>
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
        </form>
    </div>
</div>


<script type="text/javascript">

    function OnSuccessHeadOffice(data) {
        //$("#responseAlert p").parent().remove();
        //$('#responseAlert').append(data);

        alert(data);

    }
    function OnFailure(data) {
        //$("#responseAlert p").parent().remove();
        //$('#responseAlert').append(data);

        alert(data);
    }

</script>