@model HPCL.Common.Models.ResponseModel.MyHpOTCCardCustomer.ViewOTCCardResponse
@using HPCL.Common.Resources
@if (Model!=null && Model.Data.Count() > 0)
{
    <div class="d-flex align-items-center flex-wrap mb-3">
        <div class="col-md-7 col-12">
            <div class="custom_select">
            </div>
        </div>
    </div>


    <table id="tblViewRequestedMyHPOTCCard" class="table d-md-table table-bordered table-responsive mt-3" style="width:100%;">
        <thead>
            <tr>
                <th>S.No</th>
                <th>Zone</th>
                <th>Region</th>
                <th>Customer ID</th>
                <th>Customer Name</th>
                <th>Card Number</th>
                <th>Created Date</th>
                <th>Created By</th>
            </tr>
        </thead>
        <tbody>
                @{
                    int counter = 0;
                }
                @foreach (var item in Model.Data)
                {
                    counter = counter + 1;
                    <tr>
                        <td class="merchantId">@counter</td>
                        <td class="merchantId">@item.ZonalOfficeName</td>
                        <td class="terminalId">@item.RegionalOfficeName</td>
                        <td>@item.CustomerId</td>
                        <td>@item.CustomerName</td>
                        <td>@item.CardNo</td>
                        <td>@item.CreatedDate</td>
                        <td>@item.CreatedBy</td>
                    </tr>
                }
            </tbody>
    </table>
    <div class="clearfix"></div>
}
else
{
    <div class="alert alert-danger mt-3 text-center ml-3 mr-3">
        @Model.Message
    </div>
}
<script type="text/javascript">
    $(document).ready(function () {
        $('.table').DataTable({
            "lengthMenu": [10, 20, 50, 100, 200, 500],
            "oLanguage": {
                "sLengthMenu": "Display _MENU_ Records",
                "info": "Showing _START_ to _END_ of _TOTAL_ Records",
            }
        });
    });

</script>
