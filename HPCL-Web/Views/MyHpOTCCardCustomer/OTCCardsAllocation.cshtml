                debugger;

                var RegionID = document.getElementById("CustomerRegionID").value;
                console.log(RegionID);
                if (RegionID == '' || RegionID=="0") {
                    //alert('Enter Vehicle No');
                    document.getElementById("CustomerRegionID_error").innerHTML = "Select Region Name";
                    return;
                }
                else {
