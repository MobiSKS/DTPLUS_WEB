@model HPCL.Common.Models.ResponseModel.DICV.GetDICVDealerOTCCardStatusResponse
@using HPCL.Common.Resources
@if (Model.Data.Count() > 0)
{
    <div class="d-flex align-items-center flex-wrap mb-3">
        <div class="col-md-7 col-12">
            <div class="custom_select">
            </div>
        </div>
    </div>

    <table id="tblMerchantViewCardDetail" class="table d-md-table table-bordered table-responsive mt-3" style="width:100%;">
        <thead>
            <tr>
                <th>S.No.</th>
                <th>Dealer Code</th>
                <th>Dealer Name</th>
                <th>Request ID</th>
                <th>No. of Cards</th>
                <th>Requested Date</th>
                <th>Total Allotted Cards</th>
                <th>Total Mapped Cards</th>
                <th>Total Unmapped Cards</th>
            </tr>
        </thead>
        <tbody>
            @{
                int Sno = 0;
            }
            @foreach (var item in Model.Data)
            {
                Sno++;
                <tr>
                    <td>@Sno</td>
                    <td>@item.DealerCode</td>
                    <td>@item.DealerName</td>
                    <td>@item.RequestID</td>
                    <td>@item.NoofCards</td>
                    <td>@item.RequestedDate</td>
                    <td>@item.TotalAllocatedCards</td>
                    <td>@item.TotalMappedCards</td>
                    <td>@item.TotalUnmappedCards</td>
                </tr>
            }
        </tbody>
    </table>
    <div class="clearfix"></div>
    <div class="clearfix"></div>
    <div id="show_Table" class="col-lg-12 col-md-12 col-12 pl-0 pr-0 mt-3 toBeHiddenOnSuccess">
    </div>
}
else
{
    <div class="alert alert-danger mt-0 mb-0 text-center">
        @Model.Message
    </div>
}
