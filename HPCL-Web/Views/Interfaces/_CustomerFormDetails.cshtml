@model HPCL.Common.Models.ResponseModel.Interface.GetCustomerandCardFormResponse
@using HPCL.Common.Resources
@*<fieldset class="border-1 rounded border-grey h-100 w-auto">*@
@if (Model.CustomerFormDetails.Count() > 0)
{

    <div>
        <table id="customerFormDetails" class="datatable table table-striped d-table table-bordered table-responsive" style="width:100%;">
            <thead>
                <tr>
                    <th>S.No.</th>
                    <th>Customer Ref. No.</th>
                    <th>Name On Card</th>
                    <th>Customer Name</th>
                    <th>Regional Office</th>
                    <th>Form No.</th>
                    <th>City</th>
                    <th>State</th>
                    <th>Customer Status</th>
                    <th>Card Status</th>
                </tr>
            </thead>
            <tbody>
                  @{
                     int sno = 0;
                   }
                @foreach (var item in Model.CustomerFormDetails)
                {
                    <tr>
                        <td>
                            @{
                                sno++;
                            }
                            @sno
                        </td>
                        <td>@item.CustomerReferenceNo</td>
                        <td>@item.NameOnCard</td>
                        <td>@item.CustomerName</td>
                        <td>@item.RegionalOffice</td>
                        <td>@item.FormNumber</td>
                        <td>@item.City</td>
                        <td>@item.State</td>
                        <td>@item.CustomerStatus</td>
                        <td>@item.CardStatus</td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="clearfix"></div>
}
else
{
    <div class="alert alert-danger mt-3 text-center ml-3 mr-3">
        @Model.Message
    </div>
}

<script type="text/javascript">
    $(document).ready(function () {
        $('#customerFormDetails').DataTable({
            "lengthMenu": [10, 20, 50, 100, 200, 500],
            "oLanguage": {
                "sLengthMenu": "Display _MENU_ Records",
                "info": "Showing _START_ to _END_ of _TOTAL_ Records",
            }
        });
    });
</script>

