@model HPCL.Common.Models.ViewModel.Terminal.ManageTerminalModel
@{
    ViewData["Title"] = "Manage Terminal";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-ajax-unobtrusive/3.2.6/jquery.unobtrusive-ajax.js"></script>

<div class="col-lg-12 p-4 p-md-4">
    <div class="bg-white p-2 p-md-4">
        <ul class="breadcrumb bread_custom bg-transparent m-0 pb-1 py-0 px-0">
            <li class="breadcrumb-item"><a href="#" class="text_primary">Terminal Management</a> </li>
            <li class="breadcrumb-item font-weight-light">Manage Terminal</li>
        </ul>
        <form method="POST" data-ajax="true" data-ajax-controller="TerminalManagement" data-ajax-action="ManageTerminal" data-ajax-method="POST" data-ajax-failure="OnFailure">
            <div class="w-100">
                <div class="col-lg-12 col-md-12 col-12 pl-0 pr-0">
                    <div class="border-1 rounded border-grey pb-3">
                        <p class="text_primary px-3 py-2 bg-grey m-0 font-weight-bold">Manage Terminal</p>
                        <div class="col-lg-12 col-md-12 col-12 py-3">
                            <div class="d-flex align-items-center flex-wrap">
                                <div class="col-lg-12 col-12">
                                    <div class="d-flex align-items-center flex-wrap mb-3">
                                        <label class="font-weight-normal col-md-2 col-12">Search Terminal <sup class="text-danger">*</sup></label>
                                        <div class="col-md-10 col-12">
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="inlineRadioOptions" id="inlineRadio1" onclick="text(0)" checked value="option1">
                                                <label class="form-check-label" for="inlineRadio1">Terminal Status</label>
                                            </div>
                                            <div class="form-check form-check-inline">
                                                <input class="enable_tb" type="radio" name="inlineRadioOptions" id="inlineRadio" onclick="text(1)" value="option2">
                                                <label class="form-check-label" for="inlineRadio2">Terminal ID</label>
                                            </div>
                                            <div class="form-check form-check-inline">
                                                <input class="enable_tb" type="radio" name="inlineRadioOptions" id="inlineRadio" onclick="text(2)" value="option3">
                                                <label class="form-check-label" for="inlineRadio3">Merchant ID</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="d-flex align-items-center flex-wrap">
                                <div class="col-lg-6 col-12">
                                    <div class="d-flex align-items-center flex-wrap mb-3">
                                        <label class="font-weight-normal col-md-4 col-12">Select Status <sup class="text-danger">*</sup></label>
                                        <div class="col-md-7 col-12">
                                            <div class="col-md-7 col-12">
                                                <select name="StatusFlag" id="status" class="form-control statusVal">
                                                </select>

                                                @Html.ValidationMessageFor(m => m.StatusFlag, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-12">
                                    <div class="d-flex align-items-center flex-wrap mb-3">
                                        <label class="font-weight-normal col-md-4 col-12" id="merchant" style="display:none">Merchant ID <sup class="text-danger">*</sup></label>
                                        <label class="font-weight-normal col-md-4 col-12" id="terminal">Terminal ID <sup class="text-danger">*</sup></label>
                                        <div class="col-md-7 col-12 offset-md-1">
                                            <div class="custom_select">
                                                <input class="form-control" id="MerchantId" name="MerchantID" type="text" disabled="disabled" value="">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="d-flex align-items-center justify-content-center mt-0">
                                <div class="px-2">
                                    <button class="btn btn_primary" id="btnSearch" type="button">Search</button>
                                </div>
                                <div class="px-2">
                                    <button class="btn btn_primary" type="button">Reset</button>
                                </div>
                            </div>
                        </div>
                        <div class="clearfix"></div>

                        <div>
                            <div class="px-3 manageTerminalTable displayNone">
                                <table id="ManagTerminalTable" class="table table-bordered datatable" style="display:none;">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayName("Merchant Id")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Terminal Id")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Approval Date")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Deployment Status")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Terminal Issuance Type")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Mapped Merchant Id")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Service Charge In Rs Per Ltr")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Route Id")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Effective Date ")
                                            </th>
                                            @*<th>
                                                @Html.DisplayName("Action")
                                            </th>*@
                                        </tr>
                                    </thead>
                                    <tbody class="manageTerminalBody"></tbody>
                                </table>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </form>
        <div class="clearfix"></div>
    </div>
</div>

<script type="text/javascript">

    $('input:radio').click(function () {
        $("#status").prop("enable", true);
        if ($(this).attr('id') == 'inlineRadio') {
            $("#status").prop("disabled", true);
        } else {
            $("#status").prop("disabled", false);

        }
    });

    $('input:radio').click(function () {
        $("#MerchantId").prop("disabled", true);
        if ($(this).hasClass('enable_tb')) {
            $("#MerchantId").prop("disabled", false);
        }
    });

    function text(x) {
        if (x == 0) {

        }
        else if (x == 1) {
            $('#MerchantId').attr('enable', 'true');
            document.getElementById("terminal").style.display = "block";
            document.getElementById("merchant").style.display = "none";

        }
        else {
            document.getElementById("merchant").style.display = "block";
            document.getElementById("terminal").style.display = "none";

        }


    }
$(document).ready(function () {

        $.ajax({
            type: 'POST',  // http method
            url: '@Url.Action("GetStatusType", "Common")',
            data: { status: "ManageTerminal" },
            dataType: "json",
            success: function (data, status, xhr) {

                console.log(data);

                $.each(data.statusTypeList, function (i, option) {
                    $("<option/>").val(option.statusId).text(option.statusName).appendTo(".statusVal");
                });
            },
            error: function (jqXhr, textStatus, errorMessage) {
                alert("Error Populating Status Type");
            }
        });

});

    $("#btnSearch").click(function () {

        $("#ManagTerminalTable td").parent().remove();

        $.ajax({
            type: 'POST',  // http method
            url: "@Url.Action("GetAllStatusValue", "TerminalManagement")",
            //data: { RegionalId: RegionID },  // data to submit
            dataType: "json",
            success: function (res) {
                console.log(res, "res");
                $(".manageTerminalTable").removeClass("displayNone");
                    $("#ManagTerminalTable").show();

                    for (var i = 0; i < res.searchList.length; i++) {

                        var rows = "<tr>"
                            + "<td>" + (res.searchList[i].merchantid || '') + "</td>"
                            + "<td>" + (res.searchList[i].terminalid || '') + "</td>"
                            + "<td>" + (res.searchList[i].approvalDate || '') + "</td>"
                            + "<td>" + (res.searchList[i].deploymentStatus || '') + "</td>"
                            + "<td>" + (res.searchList[i].terminalIssuanceType || '') + "</td>"
                            + "<td>" + (res.searchList[i].mappedMerchantId || '') + "</td>"
                            + "<td>" + (res.searchList[i].serviceChargeInRsPerLtr || '') + "</td>"
                            + "<td>" + (res.searchList[i].routeId|| '') + "</td>"
                            + "<td>" + (res.searchList[i].effectiveDate || '') + "</td>"
                            + "</tr >";

                        $(".manageTerminalBody").append(rows);


                    }

            },
            error: function (jqXhr, textStatus, errorMessage) {
                document.getElementById("CustomerRegionID_error").innerHTML = "Error populating card details";

            }
        });

    });
</script>