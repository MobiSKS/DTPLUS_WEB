@model List<HPCL.Common.Models.ResponseModel.TerminalManagementResponse.SearchTerminalDetailsResponseModal>
@using HPCL.Common.Resources

<table class="table table-striped table-bordered mt-3" style="width:100%;">
    <thead>
        <tr>
            <th>Terminal ID</th>
            <th>Merchant ID</th>
            <th>Approval Date</th>
            <th>Status</th>
            <th>Deployment Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TerminalId</td>
                <td>@item.MerchantId</td>
                <td>@item.ApprovalDate</td>
                <td>@item.Status</td>
                <td>@item.DeploymentStatus</td>
                <td>
                    <div class="d-flex align-items-center justify-content-center">
                        <a asp-controller="" asp-action="" asp-route-merchantIdValue="" class="action_btn d-block"><img src="~/assets/images/ViewForm.png" class="img-fluid" /></a>
                        <a asp-controller="" asp-action="" asp-route-merchantIdValue="" class="action_btn d-block"><img src="~/assets/images/EditForm.png" class="img-fluid" /></a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<script type="text/javascript">
    $(document).ready(function () {
        $('.table').DataTable({
            "lengthMenu": [5, 10, 20, 50, 100, 200, 500],
            "oLanguage": {
                "sLengthMenu": "Display _MENU_ Records",
                "info": "Showing _START_ to _END_ of _TOTAL_ Records",
            }
        });
    });
</script>
