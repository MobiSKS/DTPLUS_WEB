@model HPCL.Common.Models.ViewModel.Terminal.TerminalManagement

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-ajax-unobtrusive/3.2.6/jquery.unobtrusive-ajax.js"></script>

<div class="col-lg-12">
    <div class="bg-white p-2 p-md-4">
        <ul class="breadcrumb bread_custom bg-transparent m-0 pb-1 py-0 px-0">
            <li class="breadcrumb-item"><a href="#" class="text_primary">Terminal Management</a> </li>
            <li class="breadcrumb-item font-weight-light">Terminal Installation Request</li>
        </ul>
        <form method="POST" data-ajax="true" data-ajax-controller="TerminalManagement" data-ajax-action="TerminalInstallationRequest" data-ajax-method="POST" data-ajax-success="OnSuccess" data-ajax-failure="OnFailure">
            <div class="w-100">
                <div class="col-lg-12 col-md-12 col-12 pl-0 pr-0">
                    <div class="border-1 rounded border-grey pb-3">
                        <p class="text_primary px-3 py-2 bg-grey m-0 font-weight-bold">Terminal Installation Request</p>
                        <div class="col-lg-12 col-md-12 col-12 py-3">
                            <div class="d-flex align-items-center flex-wrap">
                                <div class="col-lg-6 col-12">
                                    <div class="d-flex align-items-center flex-wrap mb-3">
                                        <label class="font-weight-normal col-md-4 col-12">Zonal Office <sup class="text-danger">*</sup></label>
                                        <div class="col-md-7 col-12">
                                            <div class="custom_select">
                                                @Html.DropDownListFor(m => m.ZonalOfficeId, Enumerable.Empty<SelectListItem>(), "--Select--", new { @class = "form-control zonalFetchId" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-12">
                                    <div class="d-flex align-items-center flex-wrap mb-3">
                                        <label class="font-weight-normal col-md-4 col-12">Regional Office <sup class="text-danger">*</sup></label>
                                        <div class="col-md-7 col-12">
                                            <div class="custom_select">
                                                @Html.DropDownListFor(m => m.RegionalOfficeId, Enumerable.Empty<SelectListItem>(), "--Select--", new { @class = "form-control regionalFetchId" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="d-flex align-items-center flex-wrap">
                                <div class="col-lg-6 col-12">
                                    <div class="d-flex align-items-center flex-wrap mb-3">
                                        <label class="font-weight-normal col-md-4 col-12">Merchant ID <sup class="text-danger">*</sup></label>
                                        <div class="col-md-7 col-12">
                                            <div class="custom_select">
                                                @Html.TextBoxFor(m => m.MerchantId, new { @id = "merchantIdVal", @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.MerchantId, "", new { @class = "text-danger" })

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="d-flex align-items-center justify-content-center mt-0">
                                <div class="px-2">
                                    <button class="btn btn_primary" type="submit" id="btnSave" name="submit" @*onclick="showGrid()"*@ >Search</button>
                                </div>
                            </div>

                            <div class="clearfix"></div>

                            <div class="alert alert-warning mt-3" role="alert" style="display:none;" id="noRecord">
                                   
                            </div>
                         
                            <div id="label" class="col-lg-12 col-md-12 col-12 pr-0 pl-md-3 pl-0 pb-4 mt-3" style="display:none;">
                                <fieldset class="border-1 rounded border-grey h-100">
                                    <legend class="font-12 font-weight-bold d-inline-block w-auto ml-3 mb-0 px-2" id="label">Merchant Details</legend>
                                    <div class="col-lg-6 col-12">
                                        <div class="form-group d-flex align-items-center flex-wrap">
                                            <label class="font-weight-normal col-md-5 col-12 mb-0">RetailOutletName</label>
                                            <div class="col-sm-6 col-md-6 col-12">
                                                <input type="text" id="RetailOutletName" style="border:none" />
                                            </div>

                                        </div>

                                        <div class="form-group d-flex align-items-center flex-wrap">
                                            <label class="font-weight-normal col-md-5 col-12  mb-0">Address:</label>
                                            <div class="col-sm-6 col-md-6 col-12">
                                                <input type="text" id="RetailOutletAddress" style="border:none" />
                                            </div>
                                        </div>
                                        <div class="form-group d-flex align-items-center flex-wrap">
                                            <label class="font-weight-normal col-md-5 col-12  mb-0">City:</label>
                                            <div class="col-sm-6 col-md-6 col-12">
                                                <input type="text" id="RetailOutletCity" style="border:none" />
                                            </div>
                                        </div>

                                        <div class="form-group d-flex align-items-center flex-wrap">
                                            <label class="font-weight-normal col-md-5 col-12  mb-0">StateName:</label>
                                            <div class="col-sm-6 col-md-6 col-12">
                                                <input type="text" id="StateName" style="border:none" />
                                            </div>
                                        </div>

                                        <div class="form-group d-flex align-items-center flex-wrap">
                                            <label class="font-weight-normal col-md-5 col-12  mb-0">DistrictName:</label>
                                            <div class="col-sm-6 col-md-6 col-12">
                                                <input type="text" id="DistrictName" style="border:none" />
                                            </div>
                                        </div>


                                    </div>
                                </fieldset>
                            </div>
                            <div id="myTable" style="display:none;">
                                <table class="table d-md-table table-bordered mt-3">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayName("Sr No")
                                            </th>

                                            <th>
                                                @Html.DisplayName("Terminal ID")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Last Month's Spends")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Staus")
                                            </th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                        <div class="d-flex align-items-center justify-content-between flex-wrap">

                            <div class="w-100">
                                <fieldset class="border-1 rounded border-grey" id="Just" style="display:none">
                                    <legend class="font-12 font-weight-bold d-inline-block w-auto ml-3 mb-0 px-2">Add Justification</legend>
                                    <div class="px-4 p-2 col-12">
                                        <div class="col-sm-10 col-12">
                                            <label class="font-weight-normal col-md-5 col-12 mb-0">Terminal Issurence Type</label>
                                            <div class="d-flex align-items-center justify-content-start flex-wrap mb-3">
                                                <label class="mb-0 mr-4 d-flex align-items-center justify-content-start" for="terminalIssurenceType">
                                                    <input type="radio" name="terminalIssurenceType" class="mr-2" id="addOn" value="Add-On" disabled="disabled">
                                                    Add-On
                                                </label>
                                                <label class="mb-0 mr-4 d-flex align-items-center justify-content-start" for="terminalIssurenceType">
                                                    <input type="radio" name="terminalIssurenceType" class="mr-2" value="Re-Installation" id="reInstall" disabled="disabled">
                                                    Re-Installation
                                                </label>
                                            </div>
                                        </div>

                                        <div class="col-sm-10 col-12">
                                            <label class="font-weight-normal col-md-5 col-12 mb-0">Terminal Type Request<sup class="text-danger">*</sup></label>
                                            <div class="d-flex align-items-center justify-content-start flex-wrap mb-3">
                                                <label class="mb-0 mr-4 d-flex align-items-center justify-content-start">
                                                    @*<input type="radio" name="terminalTypeRequest" class="mr-2">*@

                                                    @Html.RadioButton("terminalTypeRequest", "GPRS-Installation")

                                                    GPRS-Installation
                                                </label>
                                                <label class="mb-0 mr-4 d-flex align-items-center justify-content-start">
                                                    @*<input type="radio" name="terminalTypeRequest" class="mr-2">*@

                                                    @Html.RadioButton("terminalTypeRequest", "Desktop-Installation")

                                                    Desktop-Installation
                                                </label>
                                                <label class="mb-0 mr-4 d-flex align-items-center justify-content-start">
                                                    @*<input type="radio" name="terminalTypeRequest" class="mr-2">*@

                                                    @Html.RadioButton("terminalTypeRequest", "Wifi-Installation")

                                                    Wifi-Installation
                                                </label>
                                            </div>
                                        </div>
                                        <div class="col-sm-10 col-12">
                                            <label class="font-weight-normal col-md-5 col-12 mb-0">Justification<sup class="text-danger">*</sup></label>
                                            <div class="d-flex align-items-center justify-content-start flex-wrap mb-3">
                                                <textarea rows="4" cols="50" id="justificationId"></textarea>
                                            </div>
                                        </div>
                                        <div class="px-2">
                                            <button class="btn" type="button" onclick="addJustificationClick()" id="btnAdd" name="submit" style="background-color:#084693;color:white;">ADD</button>
                                            <button class="btn" type="submit" id="btnSave" name="submit" onclick="resetPress()" style="background-color:#084693;color:white;">RESET</button>
                                        </div>
                                    </div>
                                </fieldset>
                            </div>

                        </div>
                        <div class="clearfix"></div>

                    </div>
                </div>
            </div>
        </form>
        <div class="clearfix"></div>
    </div>
</div>
<script type="text/javascript">

    function resetPress() {
        $("#justificationId").val("");
    }

      $(document).ready(function () {

         $.ajax({
                type: 'POST',  // http method
                url: '@Url.Action("GetzonalOfficeList", "Common")',
                dataType: "json",
             success: function (data, status, xhr) {

                 console.log(data);

                 $.each(data.zonalOfficeLst, function (i, option) {
                     $("<option/>").val(option.zonalOfficeID).text(option.zonalOfficeName).appendTo(".zonalFetchId");
                 });
             },
             error: function (jqXhr, textStatus, errorMessage) {
                 alert("Error Populating Zonal Office");
             }
         });
    });

    $(".zonalFetchId").change(function () {
            var id = this.value;

            if (id != 0) {
                $("#state_error").html("");
            }

            $.ajax({
                type: 'POST',  // http method
                url: '@Url.Action("GetRegionalOfcDetails", "Common")',
                data: { zonalOfcId: id },  // data to submit
                dataType: "json",
                success: function (data, status, xhr) {
                    var v = data;
                    if (status == 'success') {
                        $(".regionalFetchId").html("");
                        $.each(data, function (i, data) { // bind the dropdown list using json result
                            $('<option>',
                                {
                                    value: data.regionalOfficeID,
                                    text: data.regionalOfficeName
                                }).html(data.districtName).appendTo(".regionalFetchId");
                        });
                    }
                    else {
                        console.log(v);
                    }
                },
                error: function (jqXhr, textStatus, errorMessage) {
                    alert("Error Populating Regional Office");
                }
            });
    });



    function showGrid() {
        if ($("input:text").val() == "") {
            document.getElementById('myTable').style.display = 'none';
        }
        if (($("input:text").val() != "")) {
            document.getElementById('myTable').style.display = 'inline-table';
        }
    }

    function OnSuccess(res, status, xhr) {

        console.log("response",res);

        console.log(status,"status");

        var MerchantId = $("#MerchantId").val();

        console.log(MerchantId);

        var objMerchantLst = res.searchList.data.objMerchantDetail;
        var objTerminalLst = res.searchList.data.objTerminalDetail;

        console.log(res);

        if (res.searchList.success == true) {

            document.getElementById("noRecord").style.display = "none";

            $('#RetailOutletName').val(objMerchantLst[0].retailOutletName)
            $('#RetailOutletAddress').val(objMerchantLst[0].retailOutletAddress)
            $('#RetailOutletCity').val(objMerchantLst[0].retailOutletCity)
            $('#StateName').val(objMerchantLst[0].stateName)
            $('#DistrictName').val(objMerchantLst[0].districtName)

            if ((objMerchantLst[0].terminalIssuanceType) == "Add-On") {
                $("#addOn").prop("checked", true);
            }

            if ((objMerchantLst[0].terminalIssuanceType) == "Re-Installation") {
                $("#reInstall").prop("checked", true);
            }

            $("#myTable td").parent().remove();
            for (var i = 0; i < objTerminalLst.length; i++) {

                var rows = "<tbody><tr>"
                    + "<td>" + (objTerminalLst[i].srNumber || '') + "</td>"
                    + "<td>" + (objTerminalLst[i].terminalId || '') + "</td>"
                    + "<td>" + objTerminalLst[i].lastMonthSpends + "</td>"
                    + "<td>" + (objTerminalLst[i].status || '') + "</td>"
                    + "</tr ></tbody > ";

                $("#myTable").append(rows);
            }

            $("#myTable").show();
            $("#label").show();
            $("#Just").show();
        }
        else {
            $("#myTable").hide();
            $("#label").hide();
            $("#Just").hide();
            $("#noRecord").html("");
            $("#noRecord").append("<span>" + res.searchList.message + "</span>");
            document.getElementById("noRecord").style.display = "block";
        }

        //if (res.objMerchantList.length > 0 && res.searchList.length > 0) {
        //    document.getElementById("noRecord").style.display = "none";
        //    $("#myTable").show();
        //    $("#label").show();
        //    $("#Just").show();
        //}
    };


    function addJustificationClick() {

        var TerminalIssuanceType = $('input[name="terminalIssurenceType"]:checked').val();
        var TerminalTypeRequested = $('input[name="terminalTypeRequest"]:checked').val();

        var Justification = $("#justificationId").val();
        var MerchantId = $("#merchantIdVal").val();

        console.log(TerminalIssuanceType + " " + TerminalTypeRequested + " " + Justification + " " + MerchantId);

        var objInsertTerminal = [];

        objInsertTerminal.push({
            MerchantId: MerchantId,
            TerminalIssuanceType: TerminalIssuanceType,
            TerminalTypeRequested: TerminalTypeRequested,
            Justification: Justification
        });

        $.ajax({
            url: "@Url.Action("AddJustification", "TerminalManagement")",
            type: "POST",
            dataType: "JSON",
            data: { objInsertTerminal: JSON.stringify(objInsertTerminal) },
            success: function (res) {
                $("#noRecord").html("");
                $("#noRecord").append("<span>" + res + "</span>");
                document.getElementById("noRecord").style.display = "block";
            },
            error: function (ex) {
                alert('Failed' + ex);
            }

        });
    }
</script>


