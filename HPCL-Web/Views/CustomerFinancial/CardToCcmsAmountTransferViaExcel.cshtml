            $.ajax({
                url: "@Url.Action("SearchCardToCcmsBalanceTransfer", "CustomerFinancial")",
                type: "POST",
                dataType: "JSON",
                data: { customerId: custId},
                success: function (res) {

                    console.log("res",res);

                    if(res.searchList.success == true){
                        $("#CustomerDefaultVal").attr("readonly",true);
                        $("#uploadSection").show();
                    }else{
                        $("#CustomerDefaultVal").attr("readonly",true);
                        $("#uploadSection").hide();
                        $("#noRecord").html("");
                        $("#noRecord").append("<span>" + res.searchList.message + "</span>");
