        </ul>
        <form>
            <div class="w-100">
                <div class="col-lg-12 col-md-12 col-12 pl-0 pr-0">
                    <div class="border-1 rounded border-grey pb-0">
                        <p class="text_primary px-3 py-3 bg-grey m-0 font-weight-bold">Balance Transfer Card To CCMS</p>
                        <button class="btn btn_primary add_update_btn" onclick="exportReportToExcel()">Download Sample Card To CCMS Balance Transfer</button>

                        <div class="col-lg-12 col-md-12 col-12 py-3" id="uploadBox">
                            <div class="d-flex align-items-start flex-wrap">
                                <div class="col-lg-12 col-12">
                                    <div class="d-flex align-items-center flex-wrap mb-3">
                                        <label class="font-weight-normal col-md-2 col-12">Customer ID <sup class="text-danger">*</sup></label>
                                        <div class="col-md-3 col-12">
                                            <div class="custom_select">
                                                @Html.TextBoxFor(m => m.CustomerId, new { @id = "CustomerDefaultVal", @class = "form-control", @readonly="readonly" })
