@model HPCL.Common.Models.ResponseModel.Customer.CustomerCCMSBalanceModel
@using HPCL.Common.Resources

@if (Model.Data.Count() > 0)
{
    <div class="col-lg-12 col-md-12 col-12 pl-0 pr-0">
            <div class="d-flex align-items-center flex-wrap mb-3">
                <div class="table-responsive">
                    <table id="CCMSBalanceTable" class="datatable table table-striped table-bordered d-md-table d-block text-nowrap display table-responsive" style="width:100%;">
                        <thead>
                            <tr>
                                <th>S.No.</th>
                                <th>Mode</th>
                                <th>Description</th>
                                <th>Transaction Date</th>
                                <th>Opening Balance</th>
                                <th>Posting Method</th>
                                <th>Amount</th>
                                <th>Closing Balance</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{ int Slno = 1;}
                            @foreach (var item in Model.Data)
                            {
                            <tr>
                                <td>@Slno</td>
                                <td>@item.Mode</td>
                                <td>@item.Description</td>
                                <td>@item.TransactionDate</td>
                                <td>@item.OpeningBalance</td>
                                <td>@item.PostingMethod</td>
                                <td>@item.Amount</td>
                                <td>@item.ClosingBalance</td>

                            </tr>
                                Slno++;
                            }
                        </tbody>
                    </table>
                </div>

            </div>
       
    </div>

    <div class="clearfix"></div>
}
else
{
<div class="alert alert-danger mt-3 text-center">
    @Model.Message
</div>
}

<script type="text/javascript">
    $(document).ready(function () {
        //var table = $('#CCMSBalanceTable').DataTable().clear().destroy();

        $('#CCMSBalanceTable').DataTable({
            "lengthMenu": [10, 20, 50, 100, 200, 500],
            paging: true,
            searching: false,
            stateSave: true,
            "bDestroy": true,
            "autoWidth": false,
            "oLanguage": {
                "sLengthMenu": "Display _MENU_ Records",
                "info": "Showing _START_ to _END_ of _TOTAL_ Records",
            }
        });
    });
</script>

