                                <div class="px-2">
                                    <button class="btn btn_primary" type="button" id="btnSearch">@Label.Search</button>
                                </div>
                                <div class="px-2">
                                    <button class="btn btn_primary" type="button" onclick="tableToCSV()" id="btnExporttoExcel">EXPORT TO EXCEL</button>
                                </div>
                                <div class="px-2">
                                    <button class="btn btn_primary" type="button" id="btnExporttoPDF">EXPORT TO PDF</button>
                                </div>
                                <div class="px-2">
