                                    var productName =  (childDetails[i].productName || '');
                                    var price =  (childDetails[i].price || '');
                                    var volume =  (childDetails[i].volume || '');
                                    var currency =  (childDetails[i].currency || '');
                                    var serviceCharge =  (childDetails[i].serviceCharge || '');
                                    var amount =  (childDetails[i].amount || '');
                                    var odometerReading =  (childDetails[i].odometerReading || '');
                                    var trStatus =  (childDetails[i].trStatus || '');
                                    tbl.row.add([
                                        srNumber,
                                        terminalId,
                                        customerID,
                                        merchant,
                                        batchIdandROC,
                                        accountNumber,
                                        vechileNo,
                                        txnDate,
                                        txnType,
                                        productName,
                                        price,
                                        volume,
                                        currency,
                                        serviceCharge,
