    function OnSuccessSetLimitIndividual(res) {

        console.log("res", res);

        $("#limitSection").html("");
        var amountAppend = "<span>Available CCMS Balance : " + res.amounts[0].actualCCMSBalance + "&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; Unallocated CCMS Balance : " + res.amounts[0].unallocatedCCMSBalance + ": </span>"

        $("#limitSection").append(amountAppend);

        $.ajax({
                type: 'POST',  // http method
                url: '@Url.Action("GetLimitType", "Cards")',
                dataType: "json",
             success: function (data, status, xhr) {

                 console.log(data, "data");
                 $("#CardSearch td").parent().remove();

                 for (var i = 0; i < res.searchList.length; i++) {

                     var rows = "<tbody><tr>"
                         + "<td>" + (res.searchList[i].srNumber || '') +"</td>"
                         + "<td><input type='checkbox' class='checkEnable' name='enableRow'></td>"
                         + "<td><span class='cdn'>" + (res.searchList[i].cardNumber || '') +"</span></td>"
                         + "<td><span class='vn'>" + (res.searchList[i].vechileNo || '') +"</span></td>"
                         + "<td><span class='isd'>" + (res.searchList[i].issueDate || '') +"</span></td>"
                         + "<td><span class='expd'>" + (res.searchList[i].expiryDate || '') +"</span></td>"
                         + "<td><span class='sts'>" + (res.searchList[i].status || '') +"</span></td>"

                         + "<td><input class='form-control mobn' name='" + (res.searchList[i].mobileNumber || '') + "' type='text' value='" + (res.searchList[i].mobileNumber || '') +"' readonly='readonly'></td>"
                         + "<td><select readonly='readonly' class='form-control vls'><option value='" + (res.searchList[i].ccmsLimitOption || '') + "'>" + (res.searchList[i].description || '')+"</option></select></td>"
                         + "<td><input class='form-control amt' name='" + (res.searchList[i].ccmsReloadSaleLimitValue || '') + "' type='text' value='" + (res.searchList[i].ccmsReloadSaleLimitValue || '') +"' readonly='readonly'></td>"
                         + "</tr></tbody>";

                     $('#CardSearch').append(rows);

                 }

                
                 $.each(data.sortedtList, function (i, option) {
                     $("<option/>").val(option.limitId).text(option.description).appendTo(".vls");
                 });


                 $(".vls option").each(function () {
                     $(this).siblings('[value="' + this.value + '"]').remove();
                 });


             },
             error: function (jqXhr, textStatus, errorMessage) {
                alert("Error Populating Customer Region");
             }
        });

        document.getElementById('UpdateGrid').style.display = 'block';
    }


