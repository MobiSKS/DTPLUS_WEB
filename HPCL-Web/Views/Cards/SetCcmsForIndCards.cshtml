                                                </div>
                                            </div>
                                        </div>

                                    </div>

                                    <div class="clearfix"></div>

                                    <div class="d-flex align-items-center justify-content-center mt-3">
                                        <div class="px-2">
                                            <button class="btn" type="submit" id="btnSave" name="submit" onclick="openSearchGrid()" style="background-color:#084693;color:white;">SEARCH</button>
                                            <a class="btn" href="#" id="btnCancel" name="cancel" onclick="resetClick()" style="background-color:#084693;color:white;">RESET</a>
                                            <a class="btn" href="#" id="btnCancel" name="cancel" style="background-color:#084693;color:white;">UPLOAD EXCEL</a>
                                        </div>
                                    </div>

                                    <div class="form-group d-flex align-items-center flex-wrap">

                                    </div>

                                </fieldset>

                            </div>

                            <div class="clearfix"></div>

                            <div class="form-group d-flex align-items-center flex-wrap">

                            </div>


                            <div id="UpdateGrid" style="display:none;">

                                <div id="limitSection" class="alert alert-warning" role="alert" style="width:100%;">

                                </div>

                                <table id="CardSearch" class="table table-striped table-bordered table-responsive" style="display:inline-table">
                                    <tr>

                                        <th>
                                            @Html.DisplayName("Sr Number")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Select")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Card Number")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Vehicle No")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Issue Date")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Expiry Date")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Status")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Mobile Number")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Type Of Limit")
                                        </th>
                                        <th>
                                            @Html.DisplayName("Amount")
                                        </th>

                                    </tr>
                                </table>

                                <div class="form-group d-flex align-items-center flex-wrap">

                                </div>

                                <button class="btn" type="button" id="btnSave" name="submit" onclick="updateCards()" style="background-color:#084693;color:white;float:left;margin-bottom:10px;">UPDATE</button>

                                <div class="form-group d-flex align-items-center flex-wrap">

                                </div>

                            </div>

                            <div class="clearfix"></div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>


<script>

    function openSearchGrid() {
        if ($("input:text").val() == "") {
            document.getElementById('UpdateGrid').style.display = 'none';
        }
        //if (($("input:text").val() != "")) {
        //    document.getElementById('UpdateGrid').style.display = 'block';
        //}
    }

    function resetClick() {
        $("input:text").each(function () {
            $(this).val("");
        });
        $("#UpdateGrid td").parent().remove();
        $("#limitSection").html("");
        document.getElementById('UpdateGrid').style.display = 'none';
    }


    var currentRow;
    var Cardno;
    var vehicleNo;
    var issueDate;
    var expiryDate;
    var status;
    var limitTypeText;

    $("#CardSearch").on('click', '.checkEnable', function (e) {

