                        "autoWidth": false,
                        "oLanguage": {
                            "sLengthMenu": "Display _MENU_ Records",
                            "info": "Showing _START_ to _END_ of _TOTAL_ Records",
                        }
                    });

                    for (var i = 0; i < ccmsDetails.length; i++) {

                        var isDts;
                        var expDts;

                        if(((ccmsDetails[i].issueDate) == "01/01/0001 00:00:00") || ((ccmsDetails[i].issueDate) == "01/01/1900 00:00:00")){
                            isDts = "";
                        }else{
                            isDts = moment(new Date(searchGrid[i].issueDate)).format('YYYY-MM-DD');
                        }

                        if(((ccmsDetails[i].expiryDate) == "01/01/0001 00:00:00") || ((ccmsDetails[i].expiryDate) == "01/01/1900 00:00:00")){
                            expDts = "";
                        }else{
                            expDts = moment(new Date(searchGrid[i].expiryDate)).format('YYYY-MM-DD');
                        }

                        var srNumber = (ccmsDetails[i].srNumber || '');
                        var pressCheck = "<input type='checkbox' class='checkEnable' name='enableRow'>";
                        var cardNumber = "<span class='cdn'>"+(ccmsDetails[i].cardNumber || '')+"</span>";
                        var vechileNo = (ccmsDetails[i].vechileNo || '');
                        var issueDate = isDts;
                        var expiryDate = expDts;
                        var status = (ccmsDetails[i].status || '');
                        var mobileNumber = "<input class='form-control mobn' maxlength='10' pattern='^(?!(0))[0-9]{10}$' name='" + (ccmsDetails[i].mobileNumber || '') + "' type='text' value='" + (ccmsDetails[i].mobileNumber || '') + "' readonly='readonly'>";
                        var ccmsLimitOption = "<select readonly='readonly' class='form-control vls'><option value='" + (ccmsDetails[i].ccmsLimitOption || '') + "'>" + (ccmsDetails[i].description || '') + "</option></select>";
                        var ccmsReloadSaleLimitValue = "<div class='custom_select'><input maxlength='10' title='Please Enter numeric value' class='form-control amt' name='" + (ccmsDetails[i].ccmsReloadSaleLimitValue || '') + "' type='text' value='" + (ccmsDetails[i].ccmsReloadSaleLimitValue || '') + "' readonly='readonly'><i style='display:none;' class='fa fa-exclamation-triangle amntBox' aria-hidden='true'></i></div>";

                        tbl.row.add([
                            srNumber,
                            pressCheck,
                            cardNumber,
                            vechileNo,
                            issueDate,
                            expiryDate,
                            status,
                            mobileNumber,
                            ccmsLimitOption,
                            ccmsReloadSaleLimitValue
                        ]).draw();
                    }

                    $.each(data.sortedtList, function (i, option) {
                        $("<option/>").val(option.limitId).text(option.description).appendTo(".vls");
                    });

                    $(".vls option").each(function () {
                        $(this).siblings('[value="' + this.value + '"]').remove();
                    });


                },
                error: function (jqXhr, textStatus, errorMessage) {
                    alert("Error Populating Customer Region");
                }
            });

            document.getElementById('UpdateGrid').style.display = 'block';
        } else {
            document.getElementById("UpdateGrid").style.display = "none";
            $("#noRecord").html("");
            $("#noRecord").append("<span>" + res.searchList.message + "</span>");
            document.getElementById("noRecord").style.display = "block";
        }
    }

