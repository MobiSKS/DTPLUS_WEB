@model HPCL.Common.Models.ViewModel.Cards.GetCardLimit

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-ajax-unobtrusive/3.2.6/jquery.unobtrusive-ajax.js"></script>

<div class="mt-1 w-100">
    <marquee width="100%" direction="left">
        Dear Fleet Customer, For TDS related information, Please check the latest notification at TDS Alert
    </marquee>
</div>

    <div class="bg-white p-2 p-md-4">
        <form method="post" data-ajax="true" data-ajax-controller="Cards" data-ajax-action="AcDcCardSearch" data-ajax-method="POST" data-ajax-success="OnSuccessSetLimit" data-ajax-failure="OnFailure">
                <div class="tab-pane fade show active" id="basicInfo" role="tabpanel" aria-labelledby="basicInfo-tab">
                    <div class="border-1 rounded border-grey h-100">
                        <p class="text_primary px-3 py-2 bg-grey m-0 font-weight-bold">Set Sale Limit for Cards</p>
                        <div class="p-2 p-md-4">
                            <div class="w-100">
                                <fieldset class="border-1 rounded border-grey pb-3">
                                    <legend class="font-12 font-weight-bold d-inline-block w-auto ml-3 mb-0 px-2">Search Cards</legend>
                                    <div class="d-flex align-items-center justify-content-between flex-wrap pt-3 ">
                                        <div class="col-md-6 col-12">
                                            <div class="form-group d-flex align-items-center flex-wrap">
                                                <label class="font-weight-normal col-md-4 col-12 mb-0">Customer Id<sup class="text-danger">*</sup></label>
                                                <div class="col-md-7 col-12">
                                                    @Html.TextBoxFor(m => m.CustomerId, new { @id = "CustomerDefaultVal", @class = "form-control" })
                                                    @Html.ValidationMessageFor(m => m.CustomerId, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-12">
                                            <div class="form-group d-flex align-items-center flex-wrap">
                                                <label class="font-weight-normal col-md-4 col-12 mb-0 offset-md-1">Card Number</label>
                                                <div class="col-md-7 col-12">
                                                    @Html.TextBoxFor(m => m.CardNo, new { @class = "form-control" })
                                                    @Html.ValidationMessageFor(m => m.CardNo, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-12">
                                            <div class="form-group d-flex align-items-center flex-wrap">
                                                <label class="font-weight-normal col-md-4 col-12 mb-0">Mobile Number</label>
                                                <div class="col-md-7 col-12">
                                                    @Html.TextBoxFor(m => m.MobileNo, new { @class = "form-control" })
                                                    @Html.ValidationMessageFor(m => m.MobileNo, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-12">
                                            <div class="form-group d-flex align-items-center flex-wrap">
                                                <label class="font-weight-normal col-md-4 col-12 mb-0 offset-md-1">Card Status</label>
                                                <div class="col-md-7 col-12">
                                                    @*@Html.DropDownListFor(m => m.StatusFlag, new SelectList(Model.StatusModals, "StatusId", "StatusName"), new { @class = "form-control" })*@

                                                    <select name="Statusflag" id="" class="form-control statusVal">
                                                    </select>

                                                    @Html.ValidationMessageFor(m => m.Statusflag, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        </div>

                                    </div>

                                    <div class="clearfix"></div>

                                    <div class="d-flex align-items-center justify-content-center flex-wrap mt-3 px-4">
                                        <div class="px-2 mb-3 col-sm-auto col-12 mb-sm-0 mb-2">
                                            <button class="btn btn_primary" type="submit" id="btnSave" name="submit" onclick="openSearchGrid()">SEARCH</button>
                                        </div>
                                        <div class="px-2 mb-3 col-sm-auto col-12 mb-sm-0 mb-2">
                                            <a class="btn btn_primary" href="#" id="btnCancel" name="cancel" onclick="resetClick()">RESET</a>
                                        </div>
                                        <div class="px-2 mb-3 col-sm-auto col-12 mb-sm-0 mb-2">
                                            <a class="btn btn_primary" href="#" id="btnCancel" name="cancel">UPLOAD EXCEL</a>
                                        </div>
                                    </div>
                                </fieldset>

                            </div>

                            <div class="clearfix"></div>


                            <div>
                                <div class="alert alert-warning" role="alert" style="display:none;" id="noRecord">

                                </div>
                            </div>


                            <div id="UpdateGrid" style="display:none;" class="w-100">



                                <div class="table-responsive">
                                    <table id="CardSearch" class="table table-striped table-bordered text-nowrap" style="display:inline-table">
                                        <tr>

                                            <th>
                                                @Html.DisplayName("Select")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Card Number")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Vehicle No/User Name")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Mobile Number")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Status")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Issue Date")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Expiry Date")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Cash Purse Limit")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Sale Txn limit")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Daily Sale Limit")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Monthly Sale limit")
                                            </th>

                                        </tr>
                                    </table>
                                </div>

                                <div class="d-flex align-items-center justify-content-center flex-wrap mb-3 mt-4">
                                    <div class="col-md-2 col-12 d-flex align-items-center justify-content-center">
                                        <div class="pr-2 w-50">
                                            <button class="btn btn_primary py-2 px-4" type="button" id="btnSave" name="submit" onclick="updateCards()" style="background-color:#084693;color:white;float:right;margin-bottom:10px;">UPDATE</button>
                                        </div>
                                    </div>
                                </div>



                                <div class="clearfix"></div>
                            </div>
                        </div>
                    </div>
                </div>
        </form>
    </div>

@using Microsoft.AspNetCore.Http;

<script>

    $(document).ready(function () {

        $.ajax({
            type: 'POST',  // http method
            url: '@Url.Action("GetStatusType", "Common")',
            data: { status: "SaleLimit" },
            dataType: "json",
            success: function (data, status, xhr) {

                console.log(data);

                $.each(data.statusTypeList, function (i, option) {
                    $("<option/>").val(option.statusId).text(option.statusName).appendTo(".statusVal");
                });
            },
            error: function (jqXhr, textStatus, errorMessage) {
                alert("Error Populating Status Type");
            }
        });


        var loginType = '@Context.Session.GetString("LoginType")';

        if (loginType == "Customer") {

            $.ajax({
                url: "@Url.Action("SetSaleLimit", "Cards")",
                type: "POST",
                dataType: "JSON",
                success: function (data) {

                    OnSuccessSetLimit(data);

                    $("#CustomerDefaultVal").val('@Context.Session.GetString("UserId")');
                    $("#CustomerDefaultVal").attr("readonly", true);

                    document.getElementById('UpdateGrid').style.display = 'inline-table';

                },
                error: function (ex) {
                    alert('Failed' + ex);
                }
            });
        }
    });

    function openSearchGrid() {
        if ($("input:text").val() == "") {
            document.getElementById('UpdateGrid').style.display = 'none';
        }
    }

    function resetClick() {
        $("input:text").each(function () {
            $(this).val("");
        });
        $("#CardSearch td").parent().remove();
        document.getElementById('UpdateGrid').style.display = 'none';
    }

    function OnSuccessSetLimit(res) {

        console.log(res, "data");

        if (res.searchList.success == true) {

            document.getElementById("noRecord").style.display = "none";

            $("#CardSearch td").parent().remove();

            var searchGrid = res.searchList.data;

            for (var i = 0; i < searchGrid.length; i++) {

                var rows = "<tbody><tr>"
                    + "<td><input type='checkbox' class='checkEnable' name='enableRow'></td>"
                    + "<td><span class='getCard'>" + (searchGrid[i].cardNumber || '') + "</span></a></td>"
                    + "<td>" + (searchGrid[i].vechileNo || '') + "</td>"
                    + "<td>" + (searchGrid[i].mobileNumber || '') + "</td>"
                    + "<td>" + (searchGrid[i].status || '') + "</td>"
                    + "<td>" + (searchGrid[i].issueDate || '') + "</td>"
                    + "<td>" + (searchGrid[i].expiryDate || '') + "</td>"

                    + "<td><input class='form-control cgl cpl' name='" + (searchGrid[i].cashPurseLimit || '') + "' type='text' value='" + (searchGrid[i].cashPurseLimit || '') + "' readonly='readonly'></td>"
                    + "<td><input class='form-control cgl stl' name='" + (searchGrid[i].saleTxnLimit || '') + "' type='text' value='" + (searchGrid[i].saleTxnLimit || '') + "' readonly='readonly'></td>"
                    + "<td><input class='form-control cgl dsl' name='" + (searchGrid[i].dailySaleLimit || '') + "' type='text' value='" + (searchGrid[i].dailySaleLimit || '') + "' readonly='readonly'></td>"
                    + "<td><input class='form-control cgl msl' name='" + (searchGrid[i].monthlySaleLimit || '') + "' type='text' value='" + (searchGrid[i].monthlySaleLimit || '') + "' readonly='readonly'></td></tr></tbody>";

                $('#CardSearch').append(rows);

                document.getElementById("CardSearch").style.display = "inline-block";
            }
        } else {
            document.getElementById("CardSearch").style.display = "none";
            $("#noRecord").html("");
            $("#noRecord").append("<span>" + res.searchList.message + "</span>");
            document.getElementById("noRecord").style.display = "block";
        }
    }


    var cardNo;
    var cashPurse;
    var saleTxn;
    var dailySale;
    var monthlySale;
    var currentRow;

    $("#CardSearch").on('click', '.checkEnable', function (e) {

        currentRow = $(this).closest("tr");

        if ($(this).is(':checked')) {

            currentRow.find('input:text').attr("readonly", false);

            cardNo = currentRow.find('.getCard').text();
        }
        if (!$(this).is(':checked')) {
            currentRow.find('input:text').attr("readonly", true);
        }
    });


    function OnFailure(data) {
        alert('HTTP Status Code: ' + data + '  Error Message: ' + data);
    }


    function updateCards() {

        var updateArray = new Array();

        $("#CardSearch input[type=checkbox]:checked").each(function () {
            var row = $(this).closest("tr");

            cardNo = row.find('.getCard').text();
            cashPurse = row.find('.cpl').val();
            saleTxn = row.find('.stl').val();
            dailySale = row.find('.dsl').val();
            monthlySale = row.find('.msl').val();

            updateArray.push({
                cardNo: cardNo,
                cashPurse: cashPurse,
                saleTxn: saleTxn,
                dailySale: dailySale,
                monthlySale: monthlySale
            });
        });


        console.log("ObjCardLimits", updateArray);


        $.ajax({
            url: "@Url.Action("UpdateCards", "Cards")",
            type: "POST",
            dataType: "JSON",
            data: { limitArray: updateArray},
            success: function (res) {

                $("#noRecord").html("");
                $("#noRecord").append("<span>" + res + "</span>");
                document.getElementById("noRecord").style.display = "block";

            },
            error: function (ex) {
                alert('Failed' + ex);
            }
        });

    }
</script>