@model HPCL_Web.Models.Cards.SetCcmsLimit.GetCcmsLimitAll

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-ajax-unobtrusive/3.2.6/jquery.unobtrusive-ajax.js"></script>

<marquee width="100%" direction="left" height="30%">
    Dear Fleet Customer, For TDS related information, Please check the latest notification at TDS Alert
</marquee>
<div class="col-lg-12 p-4 p-md-4">
    <div class="bg-white p-2 p-md-4">

            <div class="tab-content mt-3" id="myTabContent">
                <div class="tab-pane fade show active" id="basicInfo" role="tabpanel" aria-labelledby="basicInfo-tab">
                    <div class="border-1 rounded border-grey h-100 mt-3">


                        <p class="text_primary px-3 py-2 bg-grey m-0 font-weight-bold">Set CCMS Limits for All Cards</p>
                        <div class="py-2 p-md-4">
                            <div class="w-100">

                                <div>
                                    <form method="post" data-ajax="true" asp-controller="Cards" asp-action="SearchCcmsLimitForAllCards" data-ajax-method="POST" data-ajax-success="OnSuccessSetCcmsLimitAll" data-ajax-failure="OnFailure">

                                        <fieldset class="border-1 rounded border-grey">
                                            <legend class="font-weight-bold">Select Customer</legend>
                                            <div class="d-flex align-items-center justify-content-between flex-wrap">

                                                <div class="form-group d-flex align-items-center flex-wrap">

                                                </div>

                                                <div class="col-md-6 col-12">
                                                    <div class="form-group d-flex align-items-center flex-wrap">
                                                        <label class="font-weight-normal col-md-5 col-12">Customer Id<sup class="text-danger">*</sup></label>
                                                        <div class="col-md-7 col-12">
                                                            @Html.TextBoxFor(m => m.CustomerId, new { @id = "CCMSCustomerId", @class = "form-control" })
                                                            @Html.ValidationMessageFor(m => m.CustomerId, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-6 col-12">
                                                    <div class="form-group d-flex align-items-center flex-wrap">
                                                        <label class="font-weight-normal col-md-5 col-12">Status Flag</label>
                                                        <div class="col-md-7 col-12">
                                                            @Html.DropDownListFor(m => m.StatusFlag, new SelectList(Model.CardStatusList, "StatusId", "StatusName"), new { @class = "form-control" })
                                                            @Html.ValidationMessageFor(m => m.StatusFlag, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>

                                            <div class="clearfix"></div>

                                            <div class="col-md-6 col-12">
                                                <div class="form-group d-flex align-items-center flex-wrap">
                                                    <label class="font-weight-normal col-md-5 col-12"></label>
                                                    <div class="col-md-7 col-12">
                                                        <button class="btn" type="submit" id="btnSave" name="submit" onclick="searchAllCards()" style="background-color:#084693;color:white;">SEARCH</button>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="form-group d-flex align-items-center flex-wrap">

                                            </div>

                                        </fieldset>
                                    </form>
                                </div>

                                <div class="clearfix"></div>

                                <div>
                                    <form method="post" data-ajax="true" asp-controller="Cards" asp-action="UpdateCcmsLimitAllCards" data-ajax-method="POST" data-ajax-success="OnSuccessUpdateCcmsLimitAllCards" data-ajax-failure="OnFailure">

                                        <div class="form-group d-flex align-items-center flex-wrap">

                                        </div>
                                        <div class="form-group d-flex align-items-center flex-wrap">

                                        </div>
                                        <div class="form-group d-flex align-items-center flex-wrap">

                                        </div>
                                        <fieldset class="border-1 rounded border-grey">
                                            <legend class="font-weight-bold">Update CCMS Limit</legend>
                                            <div class="d-flex align-items-center justify-content-between flex-wrap">

                                                <div class="form-group d-flex align-items-center flex-wrap">

                                                </div>

                                                <div class="col-md-6 col-12">
                                                    <div class="form-group d-flex align-items-center flex-wrap">
                                                        <label class="font-weight-normal col-md-5 col-12">Type Of Limit<sup class="text-danger">*</sup></label>
                                                        <div class="col-md-7 col-12">
                                                            @Html.DropDownListFor(m => m.TypeOfLimit, new SelectList(Model.LimitTypeModals, "LimitId", "Description"), new { @class = "form-control" })
                                                            @Html.ValidationMessageFor(m => m.TypeOfLimit, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-md-6 col-12">
                                                    <div class="form-group d-flex align-items-center flex-wrap">
                                                        <label class="font-weight-normal col-md-5 col-12">CCMS Limit (Rs)</label>
                                                        <div class="col-md-7 col-12">
                                                            @Html.TextBoxFor(m => m.CcmsLimit, new { @class = "form-control" })
                                                            @Html.ValidationMessageFor(m => m.CcmsLimit, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>

                                            </div>

                                            <div class="clearfix"></div>



                                            <div class="form-group d-flex align-items-center flex-wrap">

                                            </div>

                                        </fieldset>

                                        <div class="row" id="setAllLimit" style="display:none;">
                                            <div class="form-group d-flex align-items-center flex-wrap">

                                            </div>
                                            <div class="form-group d-flex align-items-center flex-wrap">

                                            </div>
                                            <div class="col-12 col-md-11">
                                                <div id="searchResponse" class="alert alert-warning" role="alert" style="width:70%;">

                                                </div>
                                            </div>
                                            <div class="col-6 col-md-1">
                                                <button class="btn" type="submit" name="submit" style="background-color:#084693;color:white;">UPDATE</button>
                                            </div>

                                            <div class="clearfix"></div>

                                        </div>

                                        <div class="clearfix"></div>

                                    </form>
                                </div>

                            </div>


                            
                        </div>
                    </div>
                </div>
            </div>
      
    </div>
</div>

<script>
    $(document).ready(function () {
        $("input:text").val('');
    });

    function searchAllCards() {
        if ($("#CCMSCustomerId").val() == "") {
            document.getElementById('setAllLimit').style.display = 'none';
        }
        if (($("#CCMSCustomerId").val() != "")) {
            document.getElementById('setAllLimit').style.display = 'block';
        }
    };

    function OnSuccessSetCcmsLimitAll(data) {
        var search = "<span>Actual CCMS Balance : " + data.searchCcmsCard[0].actualCCMSBalance + " Unallocated CCMS Balance : " + data.searchCcmsCard[0].unallocatedCCMSBalance + "</span>";

        $("#searchResponse").append(search);
    }
    function OnFailure(data) {
        alert(data);
    }

    function OnSuccessUpdateCcmsLimitAllCards(data) {
        alert(data);
    }
    function OnFailure(data) {
        alert(data);
    }

</script>