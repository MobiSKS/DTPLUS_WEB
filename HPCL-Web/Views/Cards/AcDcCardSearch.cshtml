@model HPCL_Web.Models.Cards.ActivateReActivate.SearchCards

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-ajax-unobtrusive/3.2.6/jquery.unobtrusive-ajax.js"></script>
<div class="mt-1 w-100">
    <marquee width="100%" direction="left">
        Dear Fleet Customer, For TDS related information, Please check the latest notification at TDS Alert
    </marquee>
</div>
    <div class="bg-white p-2 p-md-4 w-100">
        <form method="post" data-ajax="true" data-ajax-controller="Cards" data-ajax-action="AcDcCardSearch" data-ajax-method="POST" data-ajax-success="OnSuccessAcDcSearch" data-ajax-failure="OnFailure">
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="basicInfo" role="tabpanel" aria-labelledby="basicInfo-tab">
                    <div class="border-1 rounded border-grey h-100">
                        <p class="text_primary px-3 py-2 bg-grey m-0 font-weight-bold">Deactivate / Reactivate Card Usage</p>
                        <div class="py-2 p-md-4">
                            <div class="w-100">
                                <div class="d-flex align-items-center justify-content-between flex-wrap">
                                    <div class="col-md-6 col-12 px-0">
                                        <div class="form-group d-flex align-items-center flex-wrap">
                                            <label class="font-weight-normal col-md-4 col-12 mb-0">Customer Id<sup class="text-danger">*</sup></label>
                                            <div class="col-md-7 col-12">
                                                @Html.TextBoxFor(m => m.CustomerId, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.CustomerId, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-12 px-0">
                                        <div class="form-group d-flex align-items-center flex-wrap">
                                            <label class="font-weight-normal col-md-4 col-12 mb-0 offset-md-1">Card Number</label>
                                            <div class="col-md-7 col-12">
                                                @Html.TextBoxFor(m => m.CardNo, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.CardNo, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-6 col-12 px-0">
                                        <div class="form-group d-flex align-items-center flex-wrap">
                                            <label class="font-weight-normal col-md-4 col-12 mb-0">Mobile Number</label>
                                            <div class="col-md-7 col-12">
                                                @Html.TextBoxFor(m => m.MobileNo, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.MobileNo, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                            <div class="d-flex align-items-center justify-content-center flex-wrap mt-3 mb-4">
                                <div class="px-md-2 mb-3 col-sm-auto col-12 mb-sm-0 mb-2">
                                    <button class="btn btn_primary" type="submit" id="btnSave" name="submit" onclick="showGrid()">SEARCH</button>
                                 </div>
                                <div class="px-md-2 mb-3 col-sm-auto col-12 mb-sm-0 mb-2">
                                    <a class="btn btn_primary" href="#" id="btnCancel" name="cancel" onclick="resetFields()">RESET</a>
                                </div>
                            </div>

                            <div class="clearfix"></div>
                            <div class="table-responsive">
                                <table id="CardSearch" class="table table-striped table-bordered text-nowrap" style="display:none;">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayName("Sr. Number")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Card Number")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Vehicle Number")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Mobile Number")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Action")
                                            </th>
                                            <th style="display: none;">

                                            </th>
                                            <th style="display: none;">

                                            </th>

                                        </tr>
                                    </thead>
                                </table>
                            </div>
                            <div class="clearfix"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
    </div>


<script type="text/javascript">
    function showGrid() {
        if ($("input:text").val() == "") {
            document.getElementById('CardSearch').style.display = 'none';
        }
        if (($("input:text").val() != "")) {
            document.getElementById('CardSearch').style.display = 'inline-table';
        }
    }

    function resetFields() {
        $("input:text").each(function () {
            $(this).val("");
        });
        $("#CardSearch td").parent().remove();
        document.getElementById('CardSearch').style.display = 'none';
    }


    function OnSuccessAcDcSearch(data) {

        console.log(data);

        $("#CardSearch td").parent().remove();

        for (var i = 0; i < data.searchList.length; i++) {

            var rows = "<tbody><tr>"
                + "<td>" + (data.searchList[i].srNumber || '') + "</td>"
                + "<td class='crdNo'>" + (data.searchList[i].cardNumber || '') + "</td>"
                + "<td>" + (data.searchList[i].vechileNo || '') + "</td>"
                + "<td>" + (data.searchList[i].mobileNumber || '') + "</td>"
                + "<td class='statusId' style='display:none'>" + (data.searchList[i].cardStatus || '') + "</td>"
                + "<td class='checkStatus' style='display:none'>" + (data.searchList[i].status || '') + "</td>"
                + "<td class='changeTxt'></td>"
                + "</tr ></tbody>";

            $('#CardSearch').append(rows);

            if (data.searchList[i].status == "Active") {
                $(".changeTxt").replaceWith("<td class='d-flex align-items-center justify-content-center'><button class='btn btn_primary px-2 py-1 w-50 updateStatus text-danger bg-white' type='submit' name='submit'>REACTIVATE CARD</button></td>");
            }
            if (data.searchList[i].status == "InActive") {
                $(".changeTxt").replaceWith("<td class='d-flex align-items-center justify-content-center'><button class='btn btn_primary px-2 py-1 updateStatus text-dark' type='submit' name='submit'>DEACTIVATE CARD</button></td>");
            }
        }
    }

    function OnFailure(data) {
        alert('HTTP Status Code: ' + data + '  Error Message: ' + data);
    }

    $("#CardSearch").on('click', '.updateStatus', function (e) {

        var currentRow = $(this).closest("tr");

        var cardNumber = currentRow.find(".crdNo").text();
        var cardStatus = currentRow.find(".statusId").text();
        var status = currentRow.find(".checkStatus").text();

        console.log(cardNumber, "cardNumber");
        console.log(cardStatus, "cardStatus");
        console.log(status, "status");

        var dfs = (status == "Active") ? dfs = 5 : dfs = 4;


        $.ajax({
            url: "@Url.Action("UpdateStatus","Cards")",
            type: "POST",
            dataType: "JSON",
            data: { cardNo: cardNumber, Statusflag: dfs },
            success: function (res) {

                console.log(res,"res");

                $.ajax({
                    url: "@Url.Action("RefreshGrid", "Cards")",
                    type: "POST",
                    dataType: "JSON",
                    success: function (res) {
                        

                        $("#CardSearch td").parent().remove();

                        for (var i = 0; i < res.searchList.length; i++) {

                            var rows = "<tbody><tr>"
                                + "<td>" + (res.searchList[i].srNumber || '') + "</td>"
                                + "<td class='crdNo'>" + (res.searchList[i].cardNumber || '') + "</td>"
                                + "<td>" + (res.searchList[i].vechileNo || '') + "</td>"
                                + "<td>" + (res.searchList[i].mobileNumber || '') + "</td>"
                                + "<td class='statusId' style='display:none'>" + (res.searchList[i].cardStatus || '') + "</td>"
                                + "<td class='checkStatus' style='display:none'>" + (res.searchList[i].status || '') + "</td>"
                                + "<td class='changeTxt'></td>"
                                + "</tr ></tbody > ";

                            $('#CardSearch').append(rows);

                            if (res.searchList[i].status == "Active") {
                                $(".changeTxt").replaceWith("<button class='btn updateStatus' type='submit' name='submit' style='background-color:#bdd4ec;color:red;'>REACTIVATE CARD</button>");
                            }
                            if (res.searchList[i].status == "InActive") {
                                $(".changeTxt").replaceWith("<button class='btn updateStatus' type='submit' name='submit' style='background-color:#bdd4ec;color:black;'>DEACTIVATE CARD</button>");
                            }
                        }
                       
                    },
                    error: function (ex) {
                        alert('Failed' + ex);
                    }
                });

            },
            error: function (ex) {
                alert('Failed' + ex);
            }
        });
    });

</script>
