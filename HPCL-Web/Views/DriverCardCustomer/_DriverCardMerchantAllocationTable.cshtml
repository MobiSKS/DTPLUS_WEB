@model HPCL.Common.Models.ResponseModel.DriverCardCustomer.DriverCardMerchantAllocationResponse
@using HPCL.Common.Resources

@if (Model.Data.ObjMerchantTotalCardDetail.Count() > 0 && Model.Data.ObjMerchantViewCardDetail.Count() > 0)
{
    <div class="d-flex align-items-center flex-wrap mb-3">
        <div class="col-md-7 col-12">
            <div class="custom_select">
            </div>
        </div>
    </div>

        <table id="tblStatusWiseDetails" class="table1 d-md-table table-bordered table-responsive mt-3" style="width:100%;">
        <thead>
            <tr>
                <th colspan="3" style="font-size: 14px; background: #eaeaea; color: #084693; text-transform: capitalize; ">Status wise details</th>
            </tr>
            <tr>
                <th>Total Allocated Cards</th>
                <th>Total Mapped Cards</th>
                <th>Total Unmapped Cards</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data.ObjMerchantTotalCardDetail)
            {
                <tr>
                    <td>@item.TotalAllocatedCards</td>
                    <td>@item.TotalMappedCards</td>
                    <td>@item.TotalUnmappedCards</td>
                </tr>
            }
        </tbody>
    </table>
    <div style="height: 15px; border-bottom: 1px solid #ccc; margin-bottom: 25px; "></div>

    <table id="tblMerchantViewCardDetail" class="table table-striped d-table table-bordered table-responsive mt-3" style="width:100%;">
        <thead>
            <tr>
                <th colspan="10" style="font-size: 14px; background: #eaeaea; color: #084693; text-transform: capitalize; ">Card wise details</th>
            </tr>
            <tr>
                <th>S.No</th>
                <th>ZO</th>
                <th>RO</th>
                <th>Merchant ID</th>
                <th>Retail Outlet Name</th>
                <th>Card Number</th>
                <th>Status</th>
                <th>Customer ID</th>
                <th>Allocated Date</th>
                <th>Mapping Date</th>
            </tr>
        </thead>
        <tbody>
            @{
                int counter = 0;
             }
            @foreach (var item in Model.Data.ObjMerchantViewCardDetail)
            {
                counter = counter + 1;
                <tr>
                    <td>@counter</td>
                    <td class="merchantId">@item.ZonalOfficeName</td>
                    <td class="terminalId">@item.RegionalOfficeName</td>
                    <td>@item.MerchantId</td>
                    <td>@item.RetailOutletName</td>
                    <td>@item.CardNo</td>
                    <td>@item.Status</td>
                    <td>@item.CustomerId</td>
                    <td>@item.AllocationDate</td>
                    <td>@item.MappingDate</td>
                </tr>
            }
        </tbody>
    </table>
    <div class="clearfix"></div>
}
else
{
    <div class="alert alert-danger mt-3 text-center ml-3 mr-3">
        @Model.Message
    </div>
}
<script type="text/javascript">
    $(document).ready(function () {
        $('.table').DataTable({
            "lengthMenu": [5, 10, 20, 50, 100, 200, 500],
            "oLanguage": {
                "sLengthMenu": "Display _MENU_ Records",
                "info": "Showing _START_ to _END_ of _TOTAL_ Records",
            }
        });
    });

</script>
