@model HPCL.Common.Models.ViewModel.DriverCardCustomer.DriverCardAllocationanadActivationViewModel
@using HPCL.Common.Resources
@*<fieldset class="border-1 rounded border-grey h-100 w-auto">*@
@if (Model.DriverCardAllocationandActivationDetails.Count() > 0)
{
    @*<div class="col-lg-12 col-md-12 col-12 pl-0 pr-0">
        <div class="border-1 rounded border-grey pb-3">
        <p class="font-12 font-weight-bold d-inline-block w-auto ml-3 mb-0 px-2">Card Allocation and Activation Details</p>
        <div class="d-flex align-items-center flex-wrap mb-3">


        </div>
        </div>
        </div>*@
    <div class="bg-white p-3">
    <fieldset class="border-1 rounded border-grey" id="cardActivationandAllocation">
        <legend class="font-weight-bold font-12 d-inline-block w-auto px-2 ml-2">Card Allocation and Activation Details</legend>
        <div class="px-3">
            <table id="cardAllocandActivationDetails" class="datatable table table-striped table-bordered table-responsive nowrap" style="width:100%;">
                <thead>
                    <tr>
                        <th>S.No.</th>
                        <th>ZO</th>
                        <th>RO</th>
                        <th>Form Number</th>
                        <th>Card Number</th>
                        <th>Customer ID</th>
                        <th>Customer Name</th>
                        <th>Mapping Date</th>
                        <th>Allocated MID</th>
                        <th>Retail Outlet Name</th>
                        <th>ZO</th>
                        <th>RO</th>
                        <th>Date of MID Allocation</th>
                        <th>First Transaction Date</th>
                        <th>Is DTP Customer</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int Slno = 1;
                    }
                    @foreach (var item in Model.DriverCardAllocationandActivationDetails)
                    {
                        <tr>
                            <td>@Slno</td>
                            <td>@item.ZonalOfficeName</td>
                            <td>@item.RegionalOfficeName</td>
                            <td>@item.FormNumber</td>
                            <td>@item.CardNo</td>
                            <td>@item.CustomerId</td>
                            <td>@item.CustomerName</td>
                            <td>@item.MappingDate</td>
                            <td>@item.AllocatedMID</td>
                            <td>@item.RetailOutletName</td>
                            <td>@item.ZO</td>
                            <td>@item.RO</td>
                            <td>@item.AllocationDate</td>
                            <td>@item.FirstTransactionDate</td>
                            <td>@item.IsDTPCustomer</td>
                        </tr>
                        Slno++;
                    }
                </tbody>
            </table>
        </div>
    </fieldset>
</div>
    <div class="clearfix"></div>
}
else
{
    <div class="alert alert-danger text-center">
        @Model.Message
    </div>
}

<script type="text/javascript">
    $(document).ready(function () {
        $('.table').DataTable({
            "lengthMenu": [10, 20, 50, 100, 200, 500],
            "oLanguage": {
                "sLengthMenu": "Display _MENU_ Records",
                "info": "Showing _START_ to _END_ of _TOTAL_ Records",
            }
        });
    });
</script>

