@model HPCL.Common.Models.RequestModel.MobileDispenser.InsertMobileDispenserRetailOutletMappingRequest
@using Microsoft.AspNetCore.Http;
@using HPCL.Common.Resources

<div class="col-lg-12">
    <div class="bg-white p-2 p-md-4">
        <ul class="breadcrumb bread_custom bg-transparent m-0 pb-1 py-0 px-0">
            <li class="breadcrumb-item"><a href="#" class="text_primary">Profile</a> </li>
            <li class="breadcrumb-item font-weight-light">Mobile Dispenser Retail Outlet Mapping</li>
        </ul>
        @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "applicationForm", name = "applicationForm" }))
        {
            <div class="w-100">

                <div class="tab-pane fade show active" id="viewProfile" role="tabpanel" aria-labelledby="viewProfile-tab">
                    <div class="col-lg-12 col-md-12 col-12 pl-0 pr-0">
                        <div class="border-1 rounded border-grey pb-0">
                            <p class="text_primary px-3 py-2 bg-grey m-0 font-weight-bold">Mobile Dispenser Retail Outlet Mapping</p>
                            <div class="col-lg-12 col-md-12 col-12 py-3">
                                <div class="d-flex align-items-center flex-wrap">
                                    <div class="col-lg-6 col-12">
                                        <div class="d-flex align-items-center flex-wrap mb-3">
                                            <label class="font-weight-normal col-md-4 col-12">Mobile Dispenser ID </label>
                                            <div class="col-md-7 col-12">
                                                <div class="custom_select">
                                                    @Html.TextBoxFor(m => m.MobileDispenserId, new { @class = "form-control",onkeypress = "return isNumberKey(event)",maxlength = "10" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-lg-6 col-12">
                                        <div class="d-flex align-items-center flex-wrap mb-3">
                                            <label class="font-weight-normal offset-md-1 col-md-4 col-12">Retail Outlets ID </label>
                                            <div class="col-md-7 col-12">
                                                <div class="custom_select">
                                                    @Html.TextBoxFor(m => m.RetailOutletsId, new { @class = "form-control",onkeypress = "return isNumberKey(event)",maxlength = "10" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="clearfix"></div>
                                <div class="d-flex align-items-center justify-content-center mt-0">
                                    <div class="px-2">
                                        <button class="btn btn_primary" type="button" onclick="SaveMobileDispenser()">Submit</button>
                                    </div>
                                    <div class="px-2">
                                        <button class="btn btn_primary" type="button" onclick="Reset()">Reset</button>
                                    </div>
                                </div><br>
                                <div id="reasonVal">
                                </div>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </div>
            </div>
        }

        <div class="clearfix"></div>
    </div>
</div>

<script type="text/javascript">

    var reason = '@ViewBag.Reason';
    var status = '@ViewBag.Status';

    $(document).ready(function() {
      
        if (status == '1') {
            $('#reasonVal').html('<div class="alert  alert-success text-center">'+reason+'</div>');
        }
        else if (status == '0') {
            $('#reasonVal').html('<div class="alert alert-danger text-center">'+reason+'</div>');
        }
    });


    function SaveMobileDispenser() {

        $("#applicationForm").unbind().submit();
        
    }

     function Reset() {
         debugger;
          document.getElementById('MobileDispenserId').value = "";
           document.getElementById('RetailOutletsId').value = "";
         $('#reasonVal').html("");
        
    }

    function isNumber(evt) {
        var iKeyCode = (evt.which) ? evt.which : evt.keyCode
        if (iKeyCode != 46 && iKeyCode > 31 && (iKeyCode < 48 || iKeyCode > 57))
            return false;

        return true;
    }




</script>