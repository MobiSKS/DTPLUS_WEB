@model HPCL.Common.Models.ResponseModel.JCB.GetJCBAdvancedSearchResponse
@using HPCL.Common.Resources
@if (Model.Data.Count() > 0)
{
    <div class="d-flex align-items-center flex-wrap mb-3">
        <div class="col-md-7 col-12">
            <div class="custom_select">
            </div>
        </div>
    </div>

    <table id="tblMerchantViewCardDetail" class="table d-md-table table-bordered table-responsive mt-3" style="width:100%;">
        <thead>
            <tr>
                <th>S.No.</th>
                <th>Customer Name</th>
                <th>Form Number</th>
                <th>Customer ID</th>
                <th>Customer Type</th>
                <th>Regional Office</th>
                <th>Zonal Office</th>
                <th>User Name</th>
                <th>Status</th>
                <th>Name on Card</th>
                <th>Residence Type</th>
                <th>Constitution</th>
                <th>IT Permanent A/C</th>
                <th>Bank Name</th>
                <th>Bank Branch Name</th>
                <th>Bank Account Number</th>
                <th>Control Card No.</th>
                <th>City</th>
                <th>State</th>
                <th>PinCode</th>
                <th>Mobile</th>
                <th>Email</th>
                <th>District</th>
                <th>Sales Area</th>
            </tr>
        </thead>
        <tbody>
            @{
                int Sno = 0;
            }
            @foreach (var item in Model.Data)
            {
                Sno++;
                <tr>
                    <td>@Sno</td>
                    <td>@item.IndividualOrgName</td>
                    <td>@item.FormNumber</td>
                    <td>@item.CustomerID</td>
                    <td>@item.CustomerTypeName</td>
                    <td>@item.RegionalOfficeName</td>
                    <td>@item.ZonalOfficeName</td>
                    <td>@item.CreatedBy</td>
                    <td>@item.StatusName</td>
                    <td>@item.NameOnCard</td>
                    <td>@item.ResidenceType</td>
                    <td>@item.Constitution</td>
                    <td>@item.ITPermanentAccount</td>
                    <td>@item.BankName</td>
                    <td>@item.BankBranchName</td>
                    <td>@item.BankAccountNumber</td>
                    <td>@item.ControlCardNo</td>
                    <td>@item.CommunicationCityName</td>
                    <td>@item.StateName</td>
                    <td>@item.CommunicationPincode</td>
                    <td>@item.CommunicationMobileNo</td>
                    <td>@item.CommunicationEmailid</td>
                    <td>@item.District</td>
                    <td>@item.SalesArea</td>
                </tr>
            }
        </tbody>
    </table>
    <div class="clearfix"></div>
    <div class="clearfix"></div>
    <div id="show_Table" class="col-lg-12 col-md-12 col-12 pl-0 pr-0 mt-3 toBeHiddenOnSuccess">
    </div>
}
else
{
    <div class="alert alert-danger mt-3 text-center ml-3 mr-3">
        @Model.Message
    </div>
}
<script type="text/javascript">
    $(document).ready(function () 
    {
        $('.table').DataTable({
            "lengthMenu": [10, 20, 50, 100, 200, 500],
            "oLanguage": {
                "sLengthMenu": "Display _MENU_ Records",
                "info": "Showing _START_ to _END_ of _TOTAL_ Records",
            }
        });
    });
</script>