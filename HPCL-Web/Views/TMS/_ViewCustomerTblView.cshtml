@model HPCL.Common.Models.ResponseModel.TMS.ViewCustomerSearch
@using HPCL.Common.Resources

@if (Model.Data.Count() > 0)
{
    <table class="table table-striped d-md-table table-bordered table-responsive" style="width:100%;" id="tblCustomer">
        <thead>
            <tr>
                @*<th>S.No</th>*@
                <th>Customer Name</th>
                <th>Contact No.</th>
                <th>Address1</th>
                <th>Address2</th>
                <th>City</th>
                <th>State</th>
                <th>Pin Code</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @{
                int Sno = 1;
            }
            @foreach (var item in Model.Data)
            {
                <tr>
                    @*<td>@Sno</td>*@
                    <td>@item.CustomerName</td>
                    <td>@item.ContactNo</td>
                    <td>@item.Address1</td>
                    <td>@item.Address2</td>
                    <td>@item.City</td>
                    <td>@item.State</td>
                    <td>@item.Pincode</td>
                    <td>@item.Email</td>
                </tr>
                Sno++;
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-danger mt-3 text-center ml-3 mr-3">
        @Model.Message
    </div>
}
