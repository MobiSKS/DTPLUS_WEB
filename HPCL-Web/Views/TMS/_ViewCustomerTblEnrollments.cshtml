@model HPCL.Common.Models.ResponseModel.TMS.ViewCustomerSearch
@using HPCL.Common.Resources

@if (Model.Data.Count() > 0)
{
    <table class="table table-striped d-md-table table-bordered table-responsive" style="width:100%;" id="tblCustomer">
        <thead>
            <tr>
               @* <th>S.No</th>*@
                <th>Customer Name</th>
                <th>Contact No.</th>
                <th>TMS User ID</th>
                <th>Address1</th>
                <th>Address2</th>
                <th>City</th>
                <th>State</th>
                <th>Pin Code</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            @{
                int Sno = 1;
                string flag = "Y";
            }
            @foreach (var item in Model.Data)
            {
                @if (item.CustomerName != "Problematic Installation")
                {
                    flag = "N";
                }
                <tr>
                    @*<td>@Sno</td>*@
                    <td>@item.CustomerName</td>
                    <td>@item.ContactNo</td>
                    <td>@item.TMSUserId</td>
                    <td>@item.Address1</td>
                    <td>@item.Address2</td>
                    <td>@item.City</td>
                    <td>@item.State</td>
                    <td>@item.Pincode</td>
                    <td>@item.Email</td>
                </tr>
                Sno++;
            }
        </tbody>
    </table>
    @if (flag == "N")
    {
        <div class="clearfix"></div>

        <div class="clearfix"></div>
        <div class="d-flex align-items-center justify-content-center mt-3">
            <div class="px-2">
                <button class="btn btn_primary" type="button" onclick="submitVehicleEnrollment();">DISABLE CUSTOMER</button>
            </div>

        </div>
    }
    else
    {
        <div class="clearfix"></div>

        <div class="clearfix"></div>
        <div class="d-flex align-items-center justify-content-center mt-3">
            <div class="px-2">
                <button class="btn btn_primary" type="button" onclick="submitVehicleEnrollment();">ENABLE CUSTOMER</button>
            </div>

        </div>
    }
}
else
{
    <div class="mb-3 text-center" style="background-color: #f9c9c9; color: #8d0d0d; border-color: #f3abab;">
        @Model.Message
    </div>
}
