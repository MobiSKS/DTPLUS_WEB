@model HPCL.Common.Models.ViewModel.TatkalCardCustomer.ViewRequestedTatkalCardModel
@using HPCL.Common.Resources
@{
    ViewData["Title"] = "View Requested Tatkal Card";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-ajax-unobtrusive/3.2.6/jquery.unobtrusive-ajax.js"></script>

<div class="col-lg-12 px-0">
    <div class="bg-white p-2 p-md-4">
        <ul class="breadcrumb bread_custom bg-transparent m-0 pb-1 py-0 px-0">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "TatkalCardCustomer")" class="text_primary">Tatkal Card Customer </a> </li>
            <li class="breadcrumb-item font-weight-light">View Requested Tatkal Card</li>
        </ul>
        <form method="post" data-ajax="true" data-ajax-controller="TatkalCardCustomer" data-ajax-action="ViewRequestedTatkalCard" data-ajax-method="POST" data-ajax-failure="OnFailure">
            <div class="w-100">
                <div class="col-lg-12 col-md-12 col-12 pl-0 pr-0">
                    <div class="border-1 rounded border-grey pb-3">
                        <p class="text_primary px-3 py-2 bg-grey m-0 font-weight-bold">View Requested Tatkal Card</p>
                        <div class="alert alert-danger alert-cust-success" id="dvRemarks" style="@(Model.Remarks=="" ? "display:none":"display:block")">
                            @Html.DisplayFor(m => m.Remarks)
                        </div>
                        <div class="col-lg-12 col-md-12 col-12 py-3">
                            <div class="d-flex align-items-center flex-wrap">
                                <div class="col-lg-6 col-12">
                                    <div class="d-flex align-items-center flex-wrap mb-3">
                                        <label class="font-weight-normal col-md-4 col-12">Region Name <sup class="text-danger">*</sup></label>
                                        <div class="col-md-7 col-12">
                                            <div class="custom_select">
                                                @Html.DropDownListFor(m => m.CustomerRegionID, new SelectList(Model.RegionMdl, "RegionalOfficeID", "RegionalOfficeName"), new { @class = "form-control" })
                                                <span class="error" id="CustomerRegionID_error"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="d-flex align-items-center flex-wrap">
                                <div class="col-lg-6 col-12">
                                    <div class="d-flex align-items-center flex-wrap mb-3">
                                        <label class="font-weight-normal col-md-4 col-12"></label>
                                        <div class="col-md-7 col-12">
                                            <div class="d-flex align-items-center justify-content-center mt-0">
                                                <div class="px-2">
                                                    <button class="btn btn_primary" id="btnSearch" type="button">@Label.Search</button>
                                                </div>
                                                <div class="px-2">
                                                    <button class="btn btn_primary" type="button" onclick="ResetFields();">@Label.Reset</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="clearfix"></div>
         
                        </div>
                        <div class="clearfix"></div>
                        <div>
                            <div class="px-3">
                                <table id="ViewTatkal" class="table table-bordered" style="display:none;">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayName("Zone")
                                            </th>

                                            <th>
                                                @Html.DisplayName("Region")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Customer ID")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Customer Number")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Card Number")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Created Date")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Created By")
                                            </th>
                                              
                                        </tr>
                                    </thead>
                                </table>
                            </div>
                            <div class="col-12 text-center alert-danger p-2" id="NoRecord" style="display:none">
                                Dummy Customer not found for selected Region !
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
        <div class="clearfix"></div>
    </div>
</div>
<script type="text/javascript">
    function ResetFields() {

        $("#NoRecord").attr("style", "display:none");
        $("input:text").each(function () {
            $(this).val("");
        });
        $("#ViewTatkal td").parent().remove();
        document.getElementById('ViewTatkal').style.display = 'none';

        $("#CustomerRegionID").val(0);
        document.getElementById("CustomerRegionID_error").innerHTML = "";

        if ($('#ViewTatkal_wrapper').length) {
            document.getElementById('ViewTatkal_wrapper').style.display = 'none';
        }
    };



    $("#CustomerRegionID").change(function () {
        var id = this.value;
        if (id != 0) {
            document.getElementById("CustomerRegionID_error").innerHTML = "";
        }
    });


    $("#btnSearch").click(function () {
        var RegionID = document.getElementById("CustomerRegionID").value;
        console.log(RegionID);
        if (RegionID == '' || RegionID == "0") {
            //alert('Enter Vehicle No');
            document.getElementById("CustomerRegionID_error").innerHTML = "Please Select Region Name";
            return;
        }
        else {
            document.getElementById("CustomerRegionID_error").innerHTML = "";
        }

        var result = false;

        $("#ViewTatkal td").parent().remove();

        $.ajax({
            type: 'POST',  // http method
            url: "GetViewRequestedTatkalCard/TatkalCardCustomer",
            data: { RegionalId: RegionID },  // data to submit
            dataType: "json",
            success: function (res) {
                console.log(res, "res");

                $("#ViewTatkal td").parent().remove();

                $('#ViewTatkal').DataTable().clear().destroy();

                var tbll = $('#ViewTatkal').DataTable({
                    paging: true,
                    searching: false,
                    stateSave: true,
                    "bDestroy": true,
                    "lengthMenu": [5, 10, 20, 50, 100, 200, 500, 1000, 2000],
                    "autoWidth": false,
                    "oLanguage": {
                        "sLengthMenu": "Display _MENU_ Records",
                        "info": "Showing _START_ to _END_ of _TOTAL_ Records",
                    }
                });

                if (res.searchList.length > 0) {
                    $("#ViewTatkal").show();
                    $("#NoRecord").attr("style", "display:none");

                    for (var i = 0; i < res.searchList.length; i++) {

                        var zonalOfficeName = (res.searchList[i].zonalOfficeName || '');
                        var regionalOfficeName = (res.searchList[i].regionalOfficeName || '');
                        var customerId = (res.searchList[i].customerId || '');
                        var customerName = (res.searchList[i].customerName || '');
                        var cardNo = (res.searchList[i].cardNo || '') ;
                        var createdDate = (res.searchList[i].createdDate || '');
                        var createdBy = (res.searchList[i].createdBy || '');

                        tbll.row.add([
                            zonalOfficeName,
                            regionalOfficeName,
                            customerId,
                            customerName,
                            cardNo,
                            createdDate,
                            createdBy
                        ]).draw();

                    }
                } else {
                    $("#ViewTatkal").hide();
                    $("#NoRecord").attr("style", "display:block");
                    if ($('#ViewTatkal_wrapper').length) {
                        document.getElementById('ViewTatkal_wrapper').style.display = 'none';
                    }
                }

            },
            error: function (jqXhr, textStatus, errorMessage) {
                document.getElementById("CustomerRegionID_error").innerHTML = "Error populating card details";

            }
        });

    });

</script>