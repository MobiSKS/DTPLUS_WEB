@model HPCL.Common.Models.ResponseModel.TatkalCardCustomer.ViewTatkalCardsResponseModel
@using HPCL.Common.Resources
@if (Model.Data.Count() > 0)
{
    <div class="table-responsive">
        <table class="datatable table table-striped table-bordered d-md-table d-block text-nowrap display table-responsive" style="width:100%;" id="TerminalRequestDetails">
            <thead style="background-color:lightgray;">
                <tr>

                    <th style="width:5%;">S.No</th>
                    <th style="width:10%;">ZO</th>
                    <th style="width:10%;">RO</th>
                    <th style="width:10%;">Card Number</th>
                    <th style="width:10%;">Requested By</th>
                    <th style="width:10%;">Card Process Date</th>
                    <th style="width:10%;">Mapping Status</th>
                </tr>
            </thead>
            <tbody id="searchTableBody">
                @{
                    int Sno = 1;
                }
                @foreach (var item in Model.Data)
                {
                    

                    <tr>
                        <td>@Sno</td>
                        <td>@item.ZonalOfficeName</td>
                        <td>@item.RegionalOfficeName</td>
                        <td>@item.CardNo</td>
                        <td>@item.RequestedBy</td>
                        <td>@item.CardProcessDate</td>
                        <td>@item.MappingStatus</td>
                    </tr>
                    Sno++;
                }
            </tbody>
        </table>
    </div>

    <div class="clearfix"></div>

}
else
{
    <div class="alert alert-danger mt-3 text-center ml-3 mr-3">
        @Model.Message
    </div>
}

<script type="text/javascript">
    $(document).ready(function () {
        $('.table').DataTable({
            "lengthMenu": [5, 10, 20, 50, 100, 200, 500],
            "oLanguage": {
                "sLengthMenu": "Display _MENU_ Records",
                "info": "Showing _START_ to _END_ of _TOTAL_ Records",
            }
        });
    });
   
</script>

